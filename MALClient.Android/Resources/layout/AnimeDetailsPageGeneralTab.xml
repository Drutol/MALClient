<MALClient.Android.UserControls.OrientationDependentScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?BrushDetailsBackground"
    android:paddingTop="5dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:weightSum="2">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="2dp"
          android:layout_weight="1"
          android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?BrushRowAlternate1">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border_accent_left"
              android:gravity="center_vertical"
              android:paddingStart="5dp"
              android:paddingEnd="5dp">

            <TextView
                android:id="@+id/AnimeDetailsPageGeneralTabFragmentEpisodesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@string/font_family_light"
                android:text="Episodes"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />

            <TextView
                android:id="@+id/AnimeDetailsPageGeneralTabFragmentEpisodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@string/font_family_medium"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />
          </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="?BrushRowAlternate2">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border_accent_left"
              android:gravity="center_vertical"
              android:paddingStart="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@string/font_family_light"
                android:text="Score"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|end">

              <TextView
                  android:id="@+id/AnimeDetailsPageGeneralTabFragmentScore"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:fontFamily="@string/font_family_medium"
                  android:paddingEnd="5dp"
                  android:textColor="?BrushText"
                  android:textSize="@dimen/FontSizeNormal"
                  tools:text="8.44" />

              <LinearLayout
                  android:id="@+id/AnimeDetailsPageGeneralTabFragmentScoreHiddenLabel"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:clickable="true"
                  android:focusable="true"
                  android:foreground="?selectableItemBackground"
                  android:gravity="center"
                  android:paddingStart="5dp"
                  android:paddingEnd="5dp"
                  android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_eye_outline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@string/font_family_light"
                    android:text="Hidden"
                    android:textColor="?BrushText"
                    android:textSize="@dimen/FontSizeNormal"
                    android:textStyle="italic" />
              </LinearLayout>
            </FrameLayout>

          </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="?BrushRowAlternate1">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:background="@drawable/border_accent_left"
              android:gravity="center_vertical"
              android:paddingStart="5dp"
              android:paddingEnd="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@string/font_family_light"
                android:text="Start"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />

            <TextView
                android:id="@+id/AnimeDetailsPageGeneralTabFragmentStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@string/font_family_medium"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />
          </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/AnimeDetailsPageGeneralTabFragmentMyStartButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:longClickable="true">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?BrushRowAlternate2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/border_accent_left"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:fontFamily="@string/font_family_light"
                  android:text="My start"
                  android:textColor="?BrushText"
                  android:textSize="@dimen/FontSizeNormal" />

              <TextView
                  android:id="@+id/AnimeDetailsPageGeneralTabFragmentMyStart"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical|end"
                  android:textColor="?AccentColourDark"
                  android:textSize="@dimen/FontSizeNormal" />
            </FrameLayout>
          </FrameLayout>
        </FrameLayout>
      </LinearLayout>

      <View
          android:layout_width="2dp"
          android:layout_height="match_parent"
          android:background="?BrushDetailsGeneralBorder" />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="2dp"
          android:layout_weight="1"
          android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?BrushRowAlternate1">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:background="@drawable/border_accent_right"
              android:gravity="center_vertical"
              android:paddingStart="5dp"
              android:paddingEnd="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@string/font_family_light"
                android:text="Type"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />

            <TextView
                android:id="@+id/AnimeDetailsPageGeneralTabFragmentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@string/font_family_medium"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />
          </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="?BrushRowAlternate2">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:background="@drawable/border_accent_right"
              android:gravity="center_vertical"
              android:paddingStart="5dp"
              android:paddingEnd="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@string/font_family_light"
                android:text="Status"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />

            <TextView
                android:id="@+id/AnimeDetailsPageGeneralTabFragmentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@string/font_family_medium"
                android:gravity="center"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />
          </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="?BrushRowAlternate1">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:background="@drawable/border_accent_right"
              android:gravity="center_vertical"
              android:paddingStart="5dp"
              android:paddingEnd="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@string/font_family_light"
                android:text="End"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />

            <TextView
                android:id="@+id/AnimeDetailsPageGeneralTabFragmentEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@string/font_family_medium"
                android:textColor="?BrushText"
                android:textSize="@dimen/FontSizeNormal" />
          </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/AnimeDetailsPageGeneralTabFragmentMyEndButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:longClickable="true">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?BrushRowAlternate2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/border_accent_right"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:fontFamily="@string/font_family_light"
                  android:text="My end"
                  android:textColor="?BrushText"
                  android:textSize="@dimen/FontSizeNormal" />

              <TextView
                  android:id="@+id/AnimeDetailsPageGeneralTabFragmentMyEnd"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical|end"
                  android:textColor="?AccentColourDark"
                  android:textSize="@dimen/FontSizeNormal" />
            </FrameLayout>
          </FrameLayout>
        </FrameLayout>
      </LinearLayout>
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text="Synopsis"
        android:textColor="?BrushText"
        android:textSize="@dimen/FontSizeMedium" />

    <TextView
        android:id="@+id/AnimeDetailsPageGeneralTabFragmentSynopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=""
        android:textColor="?BrushText"
        android:textSize="@dimen/FontSizeNormal" />
  </LinearLayout>
</MALClient.Android.UserControls.OrientationDependentScrollView>
