<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <GridView
      android:id="@+id/PromoVideosPageGridView"
      android:layout_width="match_parent"
      android:layout_gravity="center_horizontal"
      android:layout_height="match_parent"
      android:numColumns="auto_fit"
      android:gravity="center"
      android:choiceMode="singleChoice"/>

  <ProgressBar android:id="@+id/PromoVideosPageLoadingSpinner" android:layout_width="wrap_content"
      android:indeterminateTint="?AccentColour" android:indeterminateTintMode="src_in"
      android:layout_height="wrap_content"
      android:indeterminate="true" android:layout_centerInParent="true"/>
</RelativeLayout>