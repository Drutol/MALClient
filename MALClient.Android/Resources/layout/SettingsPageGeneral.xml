<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?BrushDeepBackground"
      android:orientation="vertical"
      android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="Start page"
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <RadioGroup
          android:id="@+id/SettingsPageGeneralStartPageRadioGroup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/SettingsPageGeneralRadioAnimeList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            android:gravity="center"
            android:text="Anime list" />

        <RadioButton
            android:id="@+id/SettingsPageGeneralRadioMangaList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Manga list" />
      </RadioGroup>
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="Colour theme"
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <RadioGroup
          android:id="@+id/SettingsPageGeneralThemeRadioGroup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/SettingsPageGeneralRadioDarkTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Dark theme" />

        <RadioButton
            android:id="@+id/SettingsPageGeneralRadioLightTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Light theme" />
      </RadioGroup>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <ImageButton
              android:id="@+id/SettingsPageGeneralColorOrange"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@color/OrangeAccentColour"
              android:src="@drawable/icon_ok" />

          <ImageButton
              android:id="@+id/SettingsPageGeneralColorPurple"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_marginStart="10dp"
              android:background="@color/PurpleAccentColour"
              android:src="@drawable/icon_ok"
              android:tint="#fff" />

          <ImageButton
              android:id="@+id/SettingsPageGeneralColorBlue"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_marginStart="10dp"
              android:background="@color/BlueAccentColour"
              android:src="@drawable/icon_ok"
              android:tint="#fff" />

          <ImageButton
              android:id="@+id/SettingsPageGeneralColorLime"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_marginStart="10dp"
              android:background="@color/LimeAccentColour"
              android:src="@drawable/icon_ok"
              android:tint="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

          <ImageButton
              android:id="@+id/SettingsPageGeneralColorPink"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@color/PinkAccentColour"
              android:src="@drawable/icon_ok"
              android:tint="#fff" />

          <ImageButton
              android:id="@+id/SettingsPageGeneralColorCyan"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_marginStart="10dp"
              android:background="@color/CyanAccentColour"
              android:src="@drawable/icon_ok"
              android:tint="#fff" />

          <ImageButton
              android:id="@+id/SettingsPageGeneralColorSkyBlue"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_marginStart="10dp"
              android:background="@color/SkyBlueAccentColour"
              android:src="@drawable/icon_ok"
              android:tint="#fff" />

          <ImageButton
              android:id="@+id/SettingsPageGeneralColorRed"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_marginStart="10dp"
              android:background="@color/RedAccentColour"
              android:src="@drawable/icon_ok"
              android:tint="#fff" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Make things black in dark theme...\nFriendlier for AMOLED displays.\nOnly works with dark theme enabled."
            android:textColor="?BrushText"
            android:textSize="@dimen/FontSizeMedium" />

        <Switch
            android:id="@+id/SettingsPageGeneralAmoledSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center">

        <Button
            android:id="@+id/SettingsPageGeneralThemeChangeApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="?AccentColour"
            android:text="Apply!"
            android:textColor="#fff"
            android:visibility="visible" />
      </LinearLayout>

    </LinearLayout>

