    </LinearLayout>-->


    <View
        style="@style/Divider"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Enable swipe to increment/decrement."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralEnableSwipeSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Try to display higher quality images in relevant places"
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralPullHigherSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Display show's season next to its type"
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralSeasonSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Switch sorting order automatically (ascending/descending)"
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralAutoSortSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Make manga volumes more important than chapters"
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralVolsImportantSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Hide manga section in hamburger menu."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralHideHamburgerMangaSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Prefer english titles."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralPreferEnglishTitleSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".6"
        android:fontFamily="@string/font_family_light"
        android:text="Due to MAL's limitations I can't obtain all English titles at once. As a workaround they will be saved (if available) upon loading anime details. You can also long press floating action button on anime list to show option to load details for all listed shows. Titles will be changed after list refresh."
        android:textSize="@dimen/FontSizeSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Make grid items smaller.\nRecommended for bigger displays."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralSmallerGridItems"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Reverse swiping direction on grid items."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralReverseSwipeOrder"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Display score dialog after setting status to completed."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralDisplayScoreDialog"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Enable social share button."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralEnableShareButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Display &quot;N/A&quot; on grid items when score is not set."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralEnableDisplayUnsetScores"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Hide decrement buttons and enlarge increment ones."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralHideDecrementButtons"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Hide global score of an entry you didn't rate it yet."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralHideGlobalScore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Squeeze one more grid item on anime list page."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralSqueezeOneMoreItem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".6"
        android:fontFamily="@string/font_family_light"
        android:text="Helpful when there's just a little tad of missing space to present new item without making other ones thinner."
        android:textSize="@dimen/FontSizeSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Don't display prompts to change status when updating OnHold entry."
          android:textColor="?BrushText"
          android:textSize="@dimen/FontSizeMedium" />

      <Switch
          android:id="@+id/SettingsPageGeneralDontAskMoveOnHold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Default anime sort\nvalues:"
            android:textColor="?BrushText"
            android:textSize="@dimen/FontSizeMedium" />

        <RadioGroup
            android:id="@+id/SettingsPageGeneralAnimeSortRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

          <RadioButton
              android:id="@+id/SettingsPageGeneralAnimeSortTitleRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Title" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralAnimeScoreTitleRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Score" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralAnimeWatchedTitleRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Watched" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralAnimeSoonAiringTitleRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Soonest airing" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralAnimeLastWatchTitleRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Last watched" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralAnimeSortNoneRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="None" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp">

          <Switch
              android:id="@+id/SettingsPageGeneralAnimeSortDescendingSwitch"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical" />

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_weight="1"
              android:text="Descending"
              android:textColor="?BrushText"
              android:textSize="@dimen/FontSizeMedium" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Default manga sort values:"
            android:textColor="?BrushText"
            android:textSize="@dimen/FontSizeMedium" />

        <RadioGroup
            android:id="@+id/SettingsPageGeneralMangaSortRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

          <RadioButton
              android:id="@+id/SettingsPageGeneralMangaSortTitleRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Title" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralMangaSortScoreRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Score" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralMangaSortReadRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Read" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralMangaLastReadTitleRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Last read" />

          <RadioButton
              android:id="@+id/SettingsPageGeneralMangaSortNoneRadioBtn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="None" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp">

          <Switch
              android:id="@+id/SettingsPageGeneralMangaSortDescendingSwitch"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical" />

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_weight="1"
              android:text="Descending"
              android:textColor="?BrushText"
              android:textSize="@dimen/FontSizeMedium" />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center_horizontal"
          android:text="Default view modes for status"
          android:textColor="?BrushText"
