          android:gravity="center"
          android:text="Allow for valid date override under selected circumstances." />
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Air day offset:"
            android:textColor="?BrushText"
            android:textSize="@dimen/FontSizeMedium" />

        <TextView
            android:id="@+id/SettingsPageGeneralAirDayOffsetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
