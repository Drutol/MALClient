            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

          <CheckBox
              android:id="@+id/SettingsPageGeneralStartDateWhenAddCheckBox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Set to today when adding to list." />

          <CheckBox
              android:id="@+id/SettingsPageGeneralStartDateWhenWatchCheckBox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="Set to today when setting watching status." />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="End date:"
            android:textColor="?BrushText" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_weight="1"
