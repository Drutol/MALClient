                android:layout_width="match_parent"
                android:background="@color/BrushFlyoutBackground"
                android:paddingTop="10dp" android:paddingBottom="10dp">
  <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="?android:selectableItemBackground">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:id="@+id/SuggestionItemTextView"
              android:textColor="@color/BrushText"
              android:textSize="18sp"/>
  </RelativeLayout>
</LinearLayout>