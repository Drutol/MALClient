<resources>
  <style name="TextViewHeaderStyle">
    <item name="android:textSize">@dimen/FontSizeNormal</item>
    <item name="android:textColor">?BrushText</item>
    <item name="android:layout_margin">5dp</item>
  </style>

  <style name="SelectableItemForeground">
    <item name="android:theme">@style/SelectableItemTheme</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
  </style>

  <style name="SelectableItemTheme">
    <item name="colorControlHighlight">?OpaqueAccentColour</item>
  </style>

  <style name="AccentColourButtonStyle">
    <item name="android:background">?AccentColourDark</item>
    <item name="android:fontFamily">@string/font_family_light</item>
    <item name="android:textColor">#fff</item>
    <item name="android:textSize">@dimen/FontSizeSmall</item>
    <item name="android:padding">5dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:minWidth">20dp</item>
    <item name="android:minHeight">20dp</item>
  </style>

  <style name="Theme.MALClient.Dark" parent="Theme.AppCompat.NoActionBar">
    <item name="AccentColour">@color/AccentColour</item>
    <item name="AccentColourDark">@color/AccentColourDark</item>
    <item name="AccentColourLight">@color/AccentColourLight</item>
    <item name="OpaqueAccentColour">@color/OpaqueAccentColour</item>

    <item name="android:colorEdgeEffect">#e6e6e6</item>

    <!--   your app branding color for the app bar -->
    <item name="android:colorPrimary">@color/AccentColour</item>
    <item name="android:colorPrimaryDark">@color/AccentColourDark</item>
    <item name="android:colorAccent">@color/AccentColourLight</item>

    <item name="BrushText">@color/DarkBrushText</item>
    <item name="BrushTextInverted">@color/DarkBrushTextInverted </item>
    <item name="BrushDeepBackground">@color/DarkBrushDeepBackground </item>
    <item name="BrushAppBars">@color/DarkBrushAppBars</item>
    <item name="BrushAppBarUpper">@color/DarkBrushAppBarUpper</item>
    <item name="BrushAppBarText">@color/DarkBrushAppBarText</item>
    <item name="BrushPivotHeaderBackground">@color/DarkBrushPivotHeaderBackground</item>
    <item name="BrushHamburgerBackground">@color/DarkBrushHamburgerBackground</item>
    <item name="BrushAnimeItemBackground">@color/DarkBrushAnimeItemBackground</item>
    <item name="BrushHamburgerInnerBackground">@color/DarkBrushHamburgerInnerBackground</item>
    <item name="BrushAnimeItemInnerBackground">@color/DarkBrushAnimeItemInnerBackground</item>
    <item name="BrushLoading">@color/DarkBrushLoading</item>
    <item name="BrushLoadingNonTransparent">@color/DarkBrushLoadingNonTransparent</item>
    <item name="BrushLoadingNonOpaque">@color/DarkBrushLoadingNonOpaque</item>
    <item name="BrushRowAlternate1">@color/DarkBrushRowAlternate1</item>
    <item name="BrushRowAlternate2">@color/DarkBrushRowAlternate2</item>
    <item name="BrushDetailsGeneralBorder">@color/DarkBrushDetailsGeneralBorder</item>
    <item name="BrushDetailsRelatedBackground">@color/DarkBrushDetailsRelatedBackground</item>
    <item name="BrushDetailsBackground">@color/DarkBrushDetailsBackground</item>
    <item name="BrushDetailsUpperBackground">@color/DarkBrushDetailsUpperBackground</item>
    <item name="BrushDetailsMoreButton">@color/DarkBrushDetailsMoreButton</item>
    <item name="BrushPivotInnerHeaderBarBackground">@color/DarkBrushPivotInnerHeaderBarBackground</item>
    <item name="BrushNewsBackground">@color/DarkBrushNewsBackground</item>
    <item name="BrushPinTileDialogOverlay">@color/DarkBrushPinTileDialogOverlay</item>
    <item name="BrushPinTileDialogBackground">@color/DarkBrushPinTileDialogBackground</item>
    <item name="BrushSettingsSubtitle">@color/DarkBrushSettingsSubtitle</item>
    <item name="BrushFavouriteStarBackground">@color/DarkBrushFavouriteStarBackground</item>
    <item name="BrushNoSearchResults">@color/DarkBrushNoSearchResults</item>
    <item name="BrushButtonPressed">@color/DarkBrushButtonPressed</item>
    <item name="BrushFlyoutBackground">@color/DarkBrushFlyoutBackground</item>
    <item name="BrushSelectedDialogItem">@color/DarkBrushSelectedDialogItem</item>
  </style>

  <style name="Theme.MALClient.Light" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="AccentColour" format="reference">@color/AccentColour</item>
    <item name="AccentColourDark" format="reference">@color/AccentColourDark</item>
    <item name="AccentColourLight">@color/AccentColourLight</item>
    <item name="OpaqueAccentColour" format="reference">@color/OpaqueAccentColour</item>

    <item name="android:colorEdgeEffect">#2d2d2d</item>

    <item name="android:colorPrimary">@color/AccentColour</item>
    <item name="android:colorPrimaryDark">@color/AccentColourDark</item>
    <item name="android:colorAccent">@color/AccentColourLight</item>

    <item name="BrushText">@color/LightBrushText</item>
    <item name="BrushTextInverted">@color/LightBrushTextInverted</item>
    <item name="BrushDeepBackground">@color/LightBrushDeepBackground</item>
    <item name="BrushAppBars">@color/LightBrushAppBars</item>
    <item name="BrushAppBarUpper">@color/LightBrushAppBarUpper</item>
    <item name="BrushAppBarText">@color/LightBrushAppBarText</item>
    <item name="BrushPivotHeaderBackground">@color/LightBrushPivotHeaderBackground</item>
    <item name="BrushHamburgerBackground">@color/LightBrushHamburgerBackground</item>
    <item name="BrushAnimeItemBackground">@color/LightBrushAnimeItemBackground</item>
    <item name="BrushHamburgerInnerBackground">@color/LightBrushHamburgerInnerBackground</item>
    <item name="BrushAnimeItemInnerBackground">@color/LightBrushAnimeItemInnerBackground</item>
    <item name="BrushLoading">@color/LightBrushLoading</item>
    <item name="BrushLoadingNonTransparent">@color/LightBrushLoadingNonTransparent</item>
    <item name="BrushLoadingNonOpaque">@color/LightBrushLoadingNonOpaque</item>
    <item name="BrushRowAlternate1">@color/LightBrushRowAlternate1</item>
    <item name="BrushRowAlternate2">@color/LightBrushRowAlternate2</item>
    <item name="BrushDetailsGeneralBorder">@color/LightBrushDetailsGeneralBorder</item>
    <item name="BrushDetailsRelatedBackground">@color/LightBrushDetailsRelatedBackground</item>
    <item name="BrushDetailsBackground">@color/LightBrushDetailsBackground</item>
    <item name="BrushDetailsUpperBackground">@color/LightBrushDetailsUpperBackground</item>
    <item name="BrushDetailsMoreButton">@color/LightBrushDetailsMoreButton</item>
    <item name="BrushPivotInnerHeaderBarBackground">@color/LightBrushPivotInnerHeaderBarBackground</item>
    <item name="BrushNewsBackground">@color/LightBrushNewsBackground</item>
    <item name="BrushPinTileDialogOverlay">@color/LightBrushPinTileDialogOverlay</item>
    <item name="BrushPinTileDialogBackground">@color/LightBrushPinTileDialogBackground</item>
    <item name="BrushSettingsSubtitle">@color/LightBrushSettingsSubtitle</item>
    <item name="BrushFavouriteStarBackground">@color/LightBrushFavouriteStarBackground</item>
    <item name="BrushNoSearchResults">@color/LightBrushNoSearchResults</item>
    <item name="BrushButtonPressed">@color/LightBrushButtonPressed</item>
    <item name="BrushFlyoutBackground">@color/LightBrushFlyoutBackground</item>
    <item name="BrushSelectedDialogItem">@color/LightBrushSelectedDialogItem</item>
  </style>

  <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">?android:attr/listDivider</item>
  </style>

</resources>
