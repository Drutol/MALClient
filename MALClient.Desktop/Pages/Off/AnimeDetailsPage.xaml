<Page
    x:Class="MALClient.UWP.Pages.Off.AnimeDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlsExt="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:attachedProperties1="using:MALClient.UWP.UserControls.AttachedProperties"
    xmlns:xamlConverters="using:MALClient.UWP.Shared.XamlConverters"
    xmlns:attachedProperties="using:MALClient.UWP.Shared.UserControls.AttachedProperties"
    xmlns:new="using:MALClient.UWP.Shared.UserControls.New"
    xmlns:userControls="using:MALClient.UWP.Shared.UserControls"
    DataContext="{Binding AnimeDetails ,Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:Key="OverlayFadeInStoryboard">
            <FadeInThemeAnimation TargetName="LoadingOverlay" />
        </Storyboard>

        <Storyboard x:Key="OverlayFadeOutStoryboard">
            <FadeOutThemeAnimation TargetName="LoadingOverlay" />
        </Storyboard>
        
        <xamlConverters:VisiblityInverterConverter x:Key="VisiblityInverterConverter" />
        <xamlConverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <xamlConverters:RelatedAnimeTypeToBoolConverter x:Key="RelatedAnimeTypeToBoolConverter" />
        <xamlConverters:StringToFlatStringConverter x:Key="StringToFlatStringConverter" />
        <xamlConverters:BoolToVisibilityInvertedConverter x:Key="BoolToVisibilityInvertedConverter" />
        <xamlConverters:IsThereAnyTextToVisibilityConverter x:Key="AnyTextToVisibilityConverter" />
        <xamlConverters:FavouriteBaseToStaffPersonToIsUnknownVisibilityConverter
            x:Key="FavouriteBaseToStaffPersonToIsUnknownVisibilityConverter" />
        <xamlConverters:StringRemoverConverter x:Key="StringRemoverConverter" />
    </Page.Resources>

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <EntranceNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>


    <Grid>
        <Grid.Background>
            <AcrylicBrush 
                BackgroundSource="HostBackdrop"
                TintTransitionDuration="0:0:1"
                TintColor="{StaticResource BrushDeepBackgroundColor}"
                TintOpacity="0.7"
                FallbackColor="{StaticResource BrushDeepBackgroundColor}"/>
        </Grid.Background>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/XamlResources/DictionaryRecommendations.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="150" MaxHeight="250" Height="Auto" />
            <!--Img + Details-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Row="0">
            <Grid.Background>
                <AcrylicBrush 
                    BackgroundSource="HostBackdrop"
                    TintTransitionDuration="0:0:1"
                    TintColor="{StaticResource BrushDeepBackgroundColor}"
                    TintOpacity="0.7"
                    FallbackColor="{StaticResource BrushDeepBackgroundColor}"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--Img-->
                <ColumnDefinition Width="*" />
                <!--Controls-->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="225" />
            </Grid.RowDefinitions>
            <Image controlsExt:ImageExtensions.FadeInOnLoaded="True" Margin="1,1,1,1"
                   Grid.Column="0" Stretch="Fill"
                   attachedProperties:AnimeImageExtensions.MalBaseImageSource="{Binding DetailImage}"
                   Height="200" Width="134" IsRightTapEnabled="True" RightTapped="UIElement_OnRightTapped">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout x:Name="ImageSaveFlyout">
                        <MenuFlyoutItem Text="Save" Command="{Binding SaveImageCommand}" CommandParameter="mal" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>
            </Image>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="Transparent" Margin="0,5,0,0">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource ButtonRevealStyle}">
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </StackPanel.Resources>
                <!--<Button Margin="0,5,0,0" Height="40" HorizontalAlignment="Stretch" Command="{Binding NavigateWallpapersPage}"              
                        Background="Transparent">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Wallpapers" />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Pictures" />
                </Button>-->
                <Grid Visibility="{Binding AnimeMode,Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Margin="0,5,0,0" Height="40" HorizontalAlignment="Stretch"
                            Command="{Binding LoadVideosCommand}"
                            Visibility="{Binding MalApiSpecificControlsVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="Transparent">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Promotional videos" />
                        </ToolTipService.ToolTip>
                        <Button.Flyout>
                            <Flyout x:Name="PromotionalVideosFlyout">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Promotional videos" HorizontalAlignment="Center" Margin="5,0"
                                                   FontSize="20" />
                                        <MenuFlyoutSeparator Margin="0,5" />
                                    </StackPanel>

                                    <ListView Margin="-10,0" Grid.Row="1"
                                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                                              Visibility="{Binding LoadingVideosVisibility,Converter={StaticResource BoolToVisibilityInvertedConverter}}"
                                              ItemsSource="{Binding AvailableVideos}" IsItemClickEnabled="True"
                                              ItemClick="VideosListViewOnItemCLick">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                <Setter Property="Margin" Value="0,5" />
                                                <Setter Property="Background"
                                                        Value="{ThemeResource BrushHamburgerInnerBackground}" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="320" Margin="16,0"
                                                      Background="{StaticResource BrushAnimeItemInnerBackground}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="180" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                           Stretch="UniformToFill">
                                                        <Image.Source>
                                                            <BitmapImage UriSource="{Binding Thumb}"
                                                                         DecodePixelType="Logical"
                                                                         DecodePixelHeight="180" DecodePixelWidth="320" />
                                                        </Image.Source>
                                                    </Image>
                                                    <Grid Grid.Row="1" MinHeight="40" BorderThickness="0,1,0,0"
                                                          BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                          Background="{StaticResource BrushDeepBackground}">
                                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center" Margin="5,10"
                                                                   TextWrapping="WrapWholeWords" />
                                                    </Grid>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <ProgressRing Grid.Row="1" IsActive="True" Width="30" Height="30" Margin="0,20"
                                                  Visibility="{Binding LoadingVideosVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                                  HorizontalAlignment="Center" />
                                    <TextBlock Grid.Row="1" Margin="0,20" Text="Promotional videos unavailable..."
                                               TextWrapping="WrapWholeWords"
                                               Visibility="{Binding NoVideosNoticeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                               Foreground="{ThemeResource BrushNoSearchResults}" />
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                        <SymbolIcon Symbol="Video" />
                    </Button>
                </Grid>
                <Button Margin="0,5,0,0" Height="40" HorizontalAlignment="Stretch"
                        Command="{Binding NavigateForumBoardCommand}"
                        Visibility="{Binding MalApiSpecificControlsVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="Transparent">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Forum board" />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Comment" />
                </Button>
                <Button Margin="0,5,0,0" Height="40" HorizontalAlignment="Stretch"
                        Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="Transparent">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Tags" />
                    </ToolTipService.ToolTip>
                    <Button.Flyout>
                        <Flyout Placement="Left">
                            <Grid MinWidth="230">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" MaxHeight="200" />
                                    <RowDefinition Height="Auto" MaxHeight="200" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock FontWeight="Medium" Text="Tags" HorizontalAlignment="Center"
                                           Margin="2,0,2,5" />
                                <ListView Grid.Row="1" SelectionMode="None" ItemsSource="{Binding MyTags}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="BorderBrush"
                                                    Value="{StaticResource SystemControlBackgroundAccentBrush}" />
                                            <Setter Property="BorderThickness" Value="2,0,0,0" />
                                            <Setter Property="Margin" Value="0,2" />
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="Black" Opacity=".25" />
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <SymbolIcon Symbol="Tag" />
                                                <TextBlock Grid.Column="1" TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           FontWeight="Medium" Text="{Binding}" />
                                                <Button Grid.Column="2" Background="Transparent" Padding="0" Width="30"
                                                        Height="30" CommandParameter="{Binding}"
                                                        Command="{Binding Source={StaticResource Locator},Path=AnimeDetails.RemoveTagCommand}">
                                                    <SymbolIcon Symbol="Delete" />
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <MenuFlyoutSeparator Grid.Row="2" />
                                <StackPanel Grid.Row="3" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Add new tag:" HorizontalAlignment="Center" />
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Margin="3,2" HorizontalAlignment="Stretch"
                                                 Loaded="BuggedFlyoutContentAfterAnniversaryUpdateOnLoaded"
                                                 Text="{x:Bind ViewModel.NewTagInput,Mode=TwoWay}" MaxWidth="400" TextWrapping="Wrap"/>
                                        <Button Grid.Column="1" Padding="0" Width="32" Height="32"
                                                Command="{x:Bind ViewModel.AddTagCommand}">
                                            <SymbolIcon Symbol="Add" />
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                    <SymbolIcon Symbol="Tag" />
                </Button>
                <Button Margin="0,5,0,0" Height="40" HorizontalAlignment="Stretch"
                        Command="{Binding CopyToClipboardCommand}"
                        Background="Transparent">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Copy link to clipboard." />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Copy" />
                </Button>
                <Button Margin="0,5,0,0" Height="40" HorizontalAlignment="Stretch"
                        Command="{Binding OpenInMalCommand}"
                        Background="Transparent">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Open in browser." />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Globe" />
                </Button>
                <ToggleButton Height="40"
                        Visibility="{Binding AiringNotificationsButtonVisibility}"
                        Command="{Binding ToggleAirNotificationsCommand}"
                        IsThreeState="False"
                        IsChecked="{x:Bind ViewModel.AreAirNotificationsEnabled,Mode=OneWay}"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Margin="0,5,0,0"
                        BorderThickness="1"
                        Style="{StaticResource ToggleButtonRevealStyle}">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Toggle airing notifications." />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Flag" />
                </ToggleButton>                
                <Button Height="40"
                        Visibility="{Binding IsAddAnimeButtonEnabled,Converter={StaticResource BoolToVisibilityInvertedConverter}}"
                        Command="{Binding RemoveAnimeCommand}"
                        IsEnabled="{Binding IsRemoveAnimeButtonEnabled}"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Margin="0,5,0,0">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Remove anime from your list." />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Delete" />
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                <Button HorizontalAlignment="Stretch" Height="40" Width="40" RenderTransformOrigin="0.5,0.5"
                        Command="{Binding IncrementEpsCommand}" Margin="5"
                        IsEnabled="{Binding IsIncrementButtonEnabled}"
                        Background="{ThemeResource AppBarBackgroundThemeBrush}"
                        BorderThickness="2" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                    <SymbolIcon Symbol="Add" />
                    <Button.RenderTransform>
                        <ScaleTransform ScaleY=".75" ScaleX=".75" />
                    </Button.RenderTransform>
                </Button>
                <Button HorizontalAlignment="Stretch" Height="40" Width="40" RenderTransformOrigin="0.5,0.5"
                        Command="{Binding  DecrementEpsCommand}"
                        IsEnabled="{Binding IsDecrementButtonEnabled}"
                        Background="{ThemeResource AppBarBackgroundThemeBrush}"
                        Margin="5,0"
                        BorderThickness="2" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                    <SymbolIcon Symbol="Remove" />
                    <Button.RenderTransform>
                        <ScaleTransform ScaleY=".75" ScaleX=".75" />
                    </Button.RenderTransform>
                </Button>
                <Grid Visibility="{Binding MalApiSpecificControlsVisibility}" Margin="0,0,5,0"
                      VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Grid
                        Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="{ThemeResource BrushFavouriteStarBackground}">
                        <new:FavButton />
                    </Grid>
                </Grid>
                <Grid Margin="0,5,0,0" Height="40" Width="40" Background="{ThemeResource BrushFavouriteStarBackground}"
                      Visibility="{Binding IsRewatchingButtonVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                    <ToggleButton HorizontalAlignment="Stretch" IsRightTapEnabled="True"
                                  RightTapped="RewatchedButtonOnRightClick" VerticalAlignment="Stretch"
                                  IsChecked="{Binding IsRewatching,Mode=TwoWay}" Background="Transparent"
                                  Visibility="{Binding MalApiSpecificControlsVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Rewatching. Right click to set amount of times rewatched." />
                        </ToolTipService.ToolTip>
                        <FlyoutBase.AttachedFlyout>
                            <Flyout x:Name="RewatchingFlyout">
                                <StackPanel>
                                    <StackPanel.Resources>
                                        <ResourceDictionary>
                                            <ResourceDictionary.MergedDictionaries>
                                                <ResourceDictionary Source="/XamlResources/FancyListFlyoutStyle.xaml" />
                                            </ResourceDictionary.MergedDictionaries>
                                        </ResourceDictionary>
                                    </StackPanel.Resources>
                                    <TextBlock HorizontalAlignment="Center">
                                        Times <Run Text="{Binding RewatchedLabel}" />
                                    </TextBlock>
                                    <ListView Style="{StaticResource FancyListFlyoutStyle}"
                                              ItemsSource="{Binding RewatchedOptions}"
                                              ItemClick="RewatchedFlyoutOnItemSelected">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </Flyout>
                        </FlyoutBase.AttachedFlyout>
                        <SymbolIcon Symbol="ReShare" />
                    </ToggleButton>
                    <SymbolIcon Symbol="More" Margin="0,30,3,3" RenderTransformOrigin=".5,.5" IsHitTestVisible="False"
                                HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <SymbolIcon.RenderTransform>
                            <ScaleTransform ScaleX=".7" ScaleY="1" />
                        </SymbolIcon.RenderTransform>
                    </SymbolIcon>

                </Grid>
            </StackPanel>
            <StackPanel Visibility="{Binding AddAnimeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                        Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="This entry is not on your list yet."
                           Foreground="{StaticResource SystemControlBackgroundAccentBrush}"
                           HorizontalAlignment="Center" Opacity=".75" />
                <Button HorizontalAlignment="Stretch" Height="50"
                        Command="{Binding AddAnimeCommand}"
                        IsEnabled="{Binding IsAddAnimeButtonEnabled}"
                        Background="{ThemeResource AppBarBackgroundThemeBrush}"
                        Margin="20,10,20,0"
                        BorderThickness="1" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" Style="{StaticResource ButtonRevealStyle}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Add" />
                        <TextBlock Margin="10,0,0,0" Text="Add to my list" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <ProgressRing Grid.Row="0" Grid.Column="1" Width="50" Height="50" HorizontalAlignment="Right"
                          Margin="0,0,50,0"
                          VerticalAlignment="Top" IsActive="True"
                          Visibility="{Binding LoadingUpdate,Converter={StaticResource BoolToVisibilityConverter}}" />
            <Grid Grid.Row="0" Grid.Column="1"
                  Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                  Margin="5,-10,0,0">
                <StackPanel Orientation="Vertical" Margin="1,15,1,0" HorizontalAlignment="Left">
                    <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                        <TextBlock Text="Score" VerticalAlignment="Center" Width="70" />
                        <Button FontWeight="Medium" Margin="2,1,1,1"
                                BorderThickness="0,0,0,1.5" Background="Transparent"
                                BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                Height="Auto"
                                VerticalAlignment="Center"
                                Content="{Binding MyScoreBind}">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyout.Items>
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[0]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="10" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[1]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="9" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[2]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="8" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[3]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="7" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[4]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="6" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[5]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="5" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[6]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="4" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[7]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="3" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[8]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="2" />
                                        <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[9]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="1" />
                                        <MenuFlyoutItem Text="Unranked"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="0" />
                                    </MenuFlyout.Items>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                        <TextBlock Text="Status" FontWeight="SemiLight" VerticalAlignment="Center" Width="70" />
                        <Button Margin="2,1,1,1"
                                BorderThickness="0,0,0,1.5" Background="Transparent"
                                BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" Height="Auto"
                                VerticalAlignment="Center">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyout.Items>
                                        <MenuFlyoutItem Text="{Binding Status1Label}"
                                                        Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="Watching" />
                                        <MenuFlyoutItem Text="Completed" Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="Completed" />
                                        <MenuFlyoutItem Text="On hold" Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="On hold" />
                                        <MenuFlyoutItem Text="Dropped" Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="Dropped" />
                                        <MenuFlyoutItem Text="{Binding Status5Label}"
                                                        Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="Plan to watch" />
                                    </MenuFlyout.Items>
                                </MenuFlyout>
                            </Button.Flyout>
                            <TextBlock Text="{Binding MyStatusBind}" FontWeight="Medium" />
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Width="70"
                                   Text="{Binding WatchedEpsLabel}" />
                        <Button FontWeight="Medium" Margin="2,1,1,1"
                                BorderThickness="0,0,0,1.5" Background="Transparent"
                                BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                VerticalAlignment="Center" Click="WatchedButtonOnClick"
                                Content="{Binding MyEpisodesBind}">
                            <Button.Flyout>
                                <Flyout x:Name="WatchedEpsFlyout">
                                    <StackPanel>
                                        <TextBlock
                                            Text="{Binding UpdateEpsUpperLabel,Converter={StaticResource StringToFlatStringConverter}}"
                                            HorizontalAlignment="Center"
                                            FontWeight="SemiBold" Margin="0,0,0,5" />
                                        <Grid HorizontalAlignment="Stretch" Width="150" Margin="4,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="TxtBoxWatchedEps" BorderThickness="0" Height="30"
                                                     Text="{Binding WatchedEpsInput,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                     KeyDown="SubmitWatchedEps" InputScope="Number" />
                                            <Button Grid.Column="1"
                                                    Height="{Binding ElementName=TxtBoxWatchedEps,Path=ActualHeight}"
                                                    BorderThickness="0"
                                                    Background="{ThemeResource BrushAnimeItemInnerBackground}"
                                                    Command="{Binding ChangeWatchedCommand}" Margin="2,0,0,0"
                                                    Click="WatchedEpsButton_OnClick">
                                                <SymbolIcon Symbol="Accept" />
                                            </Button>
                                        </Grid>
                                        <GridView Margin="4,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                  HorizontalAlignment="Center" x:Name="QuickSelectionGrid"
                                                  IsItemClickEnabled="True" Height="165" Width="170"
                                                  ItemClick="QuickSelectionGrid_OnItemClick">
                                            <GridView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapGrid MaximumRowsOrColumns="4" Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </GridView.ItemsPanel>
                                            <GridView.ItemContainerStyle>
                                                <Style TargetType="GridViewItem">
                                                    <Setter Property="Margin" Value="5" />
                                                    <Setter Property="Padding" Value="0" />
                                                    <Setter Property="Background"
                                                            Value="{ThemeResource BrushAnimeItemInnerBackground}" />
                                                </Style>
                                            </GridView.ItemContainerStyle>
                                            <GridView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Padding="5" Margin="5" HorizontalAlignment="Stretch"
                                                          VerticalAlignment="Stretch">
                                                        <TextBlock Text="{Binding}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </GridView.ItemTemplate>
                                        </GridView>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,5,0,5" Orientation="Horizontal"
                                Visibility="{Binding MyVolumesVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock VerticalAlignment="Center" Width="70"
                                   Text="Read&#x0a;volumes" />
                        <Button FontWeight="Medium" Margin="2,1,1,1"
                                BorderThickness="0,0,0,1.5" Background="Transparent"
                                BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                VerticalAlignment="Center"
                                Content="{Binding MyVolumesBind}">
                            <Button.Flyout>
                                <Flyout x:Name="ReadVolumesFlyout">
                                    <StackPanel>
                                        <TextBlock Text="Read volumes" HorizontalAlignment="Center"
                                                   FontWeight="SemiBold" Margin="0,0,0,5" />
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="TxtReadVolumes" Height="30" BorderThickness="0"
                                                     Loaded="BuggedFlyoutContentAfterAnniversaryUpdateOnLoaded"
                                                     Text="{Binding ReadVolumesInput,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                     KeyDown="SubmitReadVolumes" />
                                            <Button Command="{Binding ChangeVolumesCommand}"
                                                    Height="{Binding ElementName=TxtReadVolumes,Path=ActualHeight}"
                                                    Background="{ThemeResource BrushAnimeItemInnerBackground}"
                                                    BorderThickness="0"
                                                    Click="ReadVolumesButton_OnClick">
                                                <SymbolIcon Symbol="Accept" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
