                                                        </userControls:AlternatingListView>
                                                    </Grid>
                                                    <MenuFlyoutSeparator Margin="0,5"/>
                                                    <StackPanel>
                                                        <TextBlock Text="Information" FontWeight="Bold" VerticalAlignment="Top"
                                                   HorizontalAlignment="Center" FontSize="17" Margin="0,5,0,5" />
                                                        <userControls:AlternatingListView ItemsSource="{Binding Information}" ScrollViewer.VerticalScrollMode="Disabled" ItemContainerStyle="{StaticResource DetailsItemStyle}">
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid HorizontalAlignment="Stretch">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="70" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Grid.Column="0" Text="{Binding Item1}" VerticalAlignment="Center" TextAlignment="Center"
                                                                   HorizontalAlignment="Center" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                                        <TextBlock Grid.Column="1" Text="{Binding Item2}"
                                                                   HorizontalAlignment="Center" FontWeight="SemiLight" VerticalAlignment="Center" TextAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>
                                                        </userControls:AlternatingListView>
                                                    </StackPanel>
                                                    <MenuFlyoutSeparator Margin="0,5"/>
                                                    <StackPanel>
                                                        <TextBlock Text="Statistics" FontWeight="Bold" VerticalAlignment="Top"
                                                   HorizontalAlignment="Center" FontSize="17" Margin="0,5,0,5" />
                                                        <userControls:AlternatingListView ScrollViewer.VerticalScrollMode="Disabled" ItemsSource="{Binding Stats}" ItemContainerStyle="{StaticResource DetailsItemStyle}">
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid HorizontalAlignment="Stretch">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="70" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Grid.Column="0" Text="{Binding Item1}" VerticalAlignment="Center" TextAlignment="Center"
                                                                   HorizontalAlignment="Center" FontWeight="SemiBold" />
                                                                        <TextBlock Grid.Column="1" Text="{Binding Item2}"
                                                                   HorizontalAlignment="Center" FontWeight="SemiLight" VerticalAlignment="Center" TextAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>
                                                        </userControls:AlternatingListView>
                                                    </StackPanel>
                                                    <StackPanel Visibility="{Binding AnimeMode,Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <MenuFlyoutSeparator Margin="0,5"/>
                                                        <TextBlock Text="Opening themes" FontWeight="Bold"
                                               VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="17"
                                                Margin="0,5,0,5" />
                                                        <userControls:AlternatingListView ScrollViewer.VerticalScrollMode="Disabled" ItemsSource="{Binding OPs}" ItemContainerStyle="{StaticResource DetailsItemStyle}">
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding}" HorizontalAlignment="Center" IsTextSelectionEnabled="True" TextWrapping="WrapWholeWords"
                                                               FontWeight="SemiLight" TextTrimming="CharacterEllipsis" />
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>
                                                        </userControls:AlternatingListView>
                                                        <MenuFlyoutSeparator Margin="0,5" />
                                                        <TextBlock Text="Ending themes" FontWeight="Bold"
                                               VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="17"
                                                Margin="0,5,0,5" />
                                                        <userControls:AlternatingListView ScrollViewer.VerticalScrollMode="Disabled" ItemsSource="{Binding EDs}" ItemContainerStyle="{StaticResource DetailsItemStyle}">
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding}" HorizontalAlignment="Center" IsTextSelectionEnabled="True" TextWrapping="WrapWholeWords"
                                                               FontWeight="SemiLight" TextTrimming="CharacterEllipsis" />
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>

                                                        </userControls:AlternatingListView>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                            <Grid Visibility="{Binding LoadingDetails,Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch" Background="{ThemeResource BrushLoadingNonOpaque}">
                                                <ProgressRing HorizontalAlignment="Stretch" Width="75" Height="75"
                                                  Margin="0,50,0,0" VerticalAlignment="Top" IsActive="True" />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </PivotItem.Content>
                            </PivotItem>
                            <PivotItem Tag="Reviews">
                                <PivotItem.Header>
                                    Reviews
                                </PivotItem.Header>
                                <PivotItem.Content>
                                    <ScrollViewer>
                                        <Grid>
                                            <Grid VerticalAlignment="Stretch">
                                                <TextBlock Visibility="{Binding NoReviewsDataNoticeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                                           Text="Reviews unavailable :("
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           FontSize="30" FontWeight="SemiLight"
                                                           Foreground="{StaticResource SystemControlBackgroundAccentBrush}" />
                                            </Grid>
                                            <Grid Visibility="{Binding LoadingReviews,Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Stretch"
                                                  HorizontalAlignment="Stretch"
                                                  Background="{ThemeResource BrushLoading}">
                                                <ProgressRing HorizontalAlignment="Stretch" Width="100" Height="100"
                                                              Margin="0,50,0,0" VerticalAlignment="Top" IsActive="True" />
                                            </Grid>
                                            <ListView ItemsSource="{Binding Reviews}" SelectionMode="None"
                                                      ScrollViewer.VerticalScrollMode="Disabled">
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                        <Setter Property="Margin" Value="0,10" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" BorderThickness="5,0,0,0" PointerEntered="ReviewItemOnPointerEntered" PointerExited="ReviewItemOnPointerExited">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="105" />
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel                                                    
                                                        Padding="5,0,0,0" Margin="0,5" 
                                                        HorizontalAlignment="Stretch">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Image controlsExt:ImageExtensions.FadeInOnLoaded="True"
                                                                   Width="Auto" Height="Auto" MaxHeight="35"
                                                                   HorizontalAlignment="Center">
                                                                            <Image.Source>
                                                                                <BitmapImage UriSource="{Binding AuthorAvatar}" />
                                                                            </Image.Source>
                                                                        </Image>
                                                                        <StackPanel Orientation="Vertical" Margin="5,0">
                                                                            <TextBlock Text="{Binding Author}" FontSize="17"
                                                                           FontWeight="Bold" />
                                                                            <TextBlock Text="{Binding Date}" FontWeight="SemiLight" />
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                    <TextBlock Text="{Binding EpisodesSeen}" FontWeight="SemiLight" />
                                                                    <TextBlock Text="{Binding HelpfulCount}" FontWeight="SemiLight" />
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="0,5">
                                                                    <Border HorizontalAlignment="Left" BorderThickness="0,0,0,1"  BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                                                                        <TextBlock Text="{Binding OverallRating,Converter={StaticResource StringRemoverConverter},ConverterParameter=Rating}"
                                                                   FontWeight="SemiBold"/>
                                                                    </Border>
                                                                    <ItemsControl ItemsSource="{Binding Score}">
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock FontWeight="SemiLight"
                                                                               Text="{Binding Field}" />
                                                                                    <TextBlock Margin="5,0" Text="{Binding Score}" />
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </StackPanel>

                                                            </Grid>
                                                            <Grid Grid.Row="1"
                                                                  Visibility="{Binding ElementName=ExpandReviewButton,Path=IsChecked,Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBlock Text="{Binding Review}"
                                                                           TextWrapping="WrapWholeWords"
                                                                           Margin="0,5" Padding="5,5,5,0" />
                                                            </Grid>
                                                            <ToggleButton Grid.Row="0" Grid.RowSpan="2"
                                                                          Background="Transparent"
                                                                          x:Name="ExpandReviewButton"
                                                                          Style="{StaticResource TextBlockButtonStyle}"
                                                                          HorizontalAlignment="Stretch"
                                                                          VerticalAlignment="Stretch" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Grid>
                                    </ScrollViewer>
                                </PivotItem.Content>
                            </PivotItem>
                            <PivotItem Tag="Recomm">
                                <PivotItem.Header>
                                    Recoms
                                </PivotItem.Header>
                                <PivotItem.Content>
                                    <ScrollViewer>
                                        <Grid>
                                            <Grid VerticalAlignment="Stretch">
                                                <TextBlock Visibility="{Binding NoRecommDataNoticeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                                           Text="Recommendations unavailable :("
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           FontSize="30" FontWeight="SemiLight"
                                                           TextWrapping="WrapWholeWords"
                                                           Foreground="{StaticResource SystemControlBackgroundAccentBrush}" />
                                            </Grid>
                                            <Grid Visibility="{Binding LoadingRecommendations,Converter={StaticResource BoolToVisibilityConverter}}"
                                                  VerticalAlignment="Stretch"
                                                  HorizontalAlignment="Stretch"
                                                  Background="{ThemeResource BrushLoading}">
                                                <ProgressRing HorizontalAlignment="Stretch" Width="100" Height="100"
                                                              Margin="0,50,0,0" VerticalAlignment="Top" IsActive="True" />
                                            </Grid>
                                            <ListView SelectionMode="None" ItemsSource="{Binding Recommendations}"
                                                      ScrollViewer.VerticalScrollMode="Disabled"
                                                      SelectedItem="{Binding CurrentRecommendationsSelectedItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,2" HorizontalAlignment="Stretch">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="220" />
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" MaxWidth="200" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="*" />
                                                                </Grid.RowDefinitions>
                                                                <StackPanel Grid.ColumnSpan="2" Margin="5,0">
                                                                    <TextBlock Text="{Binding Title}"
                                                                               TextTrimming="CharacterEllipsis"
                                                                               FontSize="18"
                                                                               FontWeight="Medium" />
                                                                    <TextBlock Text="{Binding Type}"
                                                                               FontWeight="SemiLight"
                                                                               FontStyle="Italic" FontSize="13"
                                                                               VerticalAlignment="Bottom"
                                                                               Margin="0,0,5,5"
                                                                               Foreground="{StaticResource SystemControlBackgroundAccentBrush}" />
                                                                </StackPanel>
                                                                <Button Margin="1" Grid.Column="0" Grid.Row="1"
                                                                        MaxWidth="125"
                                                                        Command="{Binding Source={StaticResource Locator}, Path=AnimeDetails.NavigateDetailsCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        HorizontalAlignment="Left"
                                                                        Background="Transparent"
                                                                        Padding="0"
                                                                        VerticalAlignment="Stretch">
                                                                    <Grid>
                                                                        <Image
                                                                            controlsExt:ImageExtensions.FadeInOnLoaded="True"
                                                                          
                                                                            Width="Auto" VerticalAlignment="Stretch"
                                                                            HorizontalAlignment="Left"
                                                                            Stretch="Uniform" >
                                                                            <Image.Source>
                                                                                <BitmapImage UriSource="{Binding ImageUrl}"/>
                                                                            </Image.Source>
                                                                        </Image>
                                                                        <Grid VerticalAlignment="Bottom"
                                                                              HorizontalAlignment="Left" Width="30"
                                                                              Height="30">
                                                                            <Grid.Background>
                                                                                <SolidColorBrush Color="Black"
                                                                                                 Opacity=".5" />
                                                                            </Grid.Background>
                                                                            <SymbolIcon Symbol="Go" Foreground="White" />
                                                                        </Grid>
                                                                    </Grid>
                                                                </Button>
                                                                <RichTextBlock Grid.Row="1" Grid.Column="1"
                                                                               VerticalAlignment="Stretch"
                                                                               OverflowContentTarget="{Binding ElementName=DescriptionOverflow}"
                                                                               TextTrimming="None"
                                                                               TextWrapping="WrapWholeWords"
                                                                               HorizontalAlignment="Left"
                                                                               IsTextSelectionEnabled="False"
                                                                               Margin="5">
                                                                    <Paragraph>
                                                                        <Run Text="{Binding Description}" />
                                                                    </Paragraph>
                                                                </RichTextBlock>
                                                            </Grid>
                                                            <RichTextBlockOverflow Grid.Row="1"
                                                                                   x:Name="DescriptionOverflow"
                                                                                   Margin="5" />
                                                            <MenuFlyoutSeparator Grid.Row="2" Margin="-7,5" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Grid>
                                    </ScrollViewer>
                                </PivotItem.Content>
                            </PivotItem>
                            <PivotItem Tag="Related">
                                <PivotItem.Header>
                                    Related
                                </PivotItem.Header>
                                <PivotItem.Content>
                                    <ScrollViewer>
                                        <Grid>
                                            <Grid VerticalAlignment="Stretch">
                                                <TextBlock Visibility="{Binding NoRelatedDataNoticeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                                           Text="Related anime unavailable :("
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           FontSize="30" FontWeight="SemiLight"
                                                           TextWrapping="WrapWholeWords"
                                                           Foreground="{StaticResource SystemControlBackgroundAccentBrush}" />
                                            </Grid>
                                            <Grid Visibility="{Binding LoadingRelated,Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Stretch"
                                                  HorizontalAlignment="Stretch"
                                                  Background="{ThemeResource BrushLoading}">
                                                <ProgressRing HorizontalAlignment="Stretch" Width="100" Height="100"
                                                              Margin="0,50,0,0" VerticalAlignment="Top" IsActive="True" />
                                            </Grid>
                                            <ListView ItemsSource="{Binding RelatedAnime}" SelectionMode="None">
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                        <Setter Property="BorderBrush"
                                                                Value="{StaticResource SystemControlBackgroundAccentBrush}" />
                                                        <Setter Property="BorderThickness" Value="5,0,0,0" />
                                                        <Setter Property="Margin" Value="5" />
                                                        <Setter Property="Background"
                                                                Value="{ThemeResource BrushDetailsRelatedBackground}" />
                                                        <Setter Property="Padding" Value="0" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Button Margin="0"
                                                                    Style="{StaticResource TextBlockButtonStyle}"
                                                                    IsEnabled="{Binding Type , Converter={StaticResource RelatedAnimeTypeToBoolConverter}}"
                                                                    Background="Transparent"
                                                                    HorizontalAlignment="Stretch"
                                                                    Command="{Binding Source={StaticResource Locator} ,Path=AnimeDetails.NavigateDetailsCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Content>
                                                                    <TextBlock TextWrapping="WrapWholeWords" Margin="5,0"> 
                                                                        <Run Text="{Binding WholeRelation}"/> <Run Text="{Binding Title}"/>
                                                                    </TextBlock>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Grid>
                                    </ScrollViewer>
                                </PivotItem.Content>
                            </PivotItem>
                        </Pivot.Items>
                    </Pivot>

                    <Grid Grid.Row="0" Grid.RowSpan="2" Visibility="{Binding LoadingGlobal,Converter={StaticResource BoolToVisibilityConverter}}"
                          Background="{ThemeResource BrushLoading}">
                        <ProgressRing HorizontalAlignment="Stretch" Width="100" Height="100"
                                      VerticalAlignment="Stretch"
                                      IsActive="True" />
                    </Grid>

                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
