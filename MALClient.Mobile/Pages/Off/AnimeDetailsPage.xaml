<Page
    x:Class="MALClient.UWP.Pages.Off.AnimeDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlsExt="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xamlConverters="using:MALClient.UWP.Shared.XamlConverters"
    xmlns:attachedProperties="using:MALClient.UWP.Shared.UserControls.AttachedProperties"
    xmlns:new="using:MALClient.UWP.Shared.UserControls.New"
    xmlns:userControls="using:MALClient.UWP.Shared.UserControls"
    DataContext="{Binding AnimeDetails ,Source={StaticResource Locator}}"
    mc:Ignorable="d">


    <Page.Resources>
        <xamlConverters:VisiblityInverterConverter x:Key="VisiblityInverterConverter" />
        <xamlConverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <xamlConverters:RelatedAnimeTypeToBoolConverter x:Key="RelatedAnimeTypeToBoolConverter" />
        <xamlConverters:StringToFlatStringConverter x:Key="StringToFlatStringConverter" />
        <xamlConverters:BoolToVisibilityInvertedConverter x:Key="BoolToVisibilityInvertedConverter" />
        <xamlConverters:IsThereAnyTextToVisibilityConverter x:Key="AnyTextToVisibilityConverter" />
        <xamlConverters:FavouriteBaseToStaffPersonToIsUnknownVisibilityConverter x:Key="FavouriteBaseToStaffPersonToIsUnknownVisibilityConverter" />
        <xamlConverters:StringRemoverConverter x:Key="StringRemoverConverter" />
    </Page.Resources>

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <EntranceNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="{ThemeResource BrushDetailsBackground}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="700" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ScrollingContainer.VerticalScrollBarVisibility" Value="Disabled" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ScrollingContainer.VerticalScrollBarVisibility" Value="Hidden" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DetailImage.Width" Value="175" />
                        <Setter Target="DetailImage.Height" Value="203" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DetailImage.Width" Value="120" />
                        <Setter Target="DetailImage.Height" Value="148" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <ScrollViewer x:Name="ScrollingContainer">
            <Grid>
                <Grid>
                    <Grid.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="/XamlResources/DictionaryRecommendations.xaml" />
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!--Img + Details-->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Row="0" Background="{ThemeResource BrushDetailsUpperBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <!--Img-->
                            <ColumnDefinition Width="*" />
                            <!--Controls-->
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition MinHeight="0" MaxHeight="100" Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                BorderThickness="0,0,0,1"
                                Grid.Column="0">
                            <Image x:Name="DetailImage" controlsExt:ImageExtensions.FadeInOnLoaded="True"
                                   Tapped="Image_OnTapped" Margin="1,1,1,1"
                                   attachedProperties:AnimeImageExtensions.MalBaseImageSource="{Binding DetailImage}" Stretch="Uniform" >
                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout x:Name="ImageSaveFlyout">
                                        <MenuFlyoutItem Text="Save" Command="{Binding SaveImageCommand}" CommandParameter="mal" />
                                    </MenuFlyout>
                                </FlyoutBase.AttachedFlyout>
                            </Image>
                        </Border>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom">
                            <new:FavButton
                                Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Right" VerticalAlignment="Bottom" />
                            <Button VerticalAlignment="Bottom" Background="Transparent" RenderTransformOrigin="0.5,0.5">
                                <SymbolIcon Symbol="More" RenderTransformOrigin="0.5,0.5"
                                            Foreground="{StaticResource SystemControlBackgroundAccentBrush}">
                                    <SymbolIcon.RenderTransform>
                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                    </SymbolIcon.RenderTransform>
                                </SymbolIcon>
                                <Button.Flyout>
                                    <Flyout x:Name="MoreFlyout">
                                        <StackPanel>
                                            <Grid HorizontalAlignment="Stretch" Visibility="{Binding IsRewatchingButtonVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ToggleButton Height="40" Margin="0,0,0,5" HorizontalAlignment="Stretch"
                                                    IsChecked="{Binding IsRewatching,Mode=TwoWay}" Background="{ThemeResource BrushDetailsMoreButton}"
                                                    Visibility="{Binding MalApiSpecificControlsVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <ToolTipService.ToolTip>
                                                        <ToolTip Content="{Binding RewatchingLabel}" />
                                                    </ToolTipService.ToolTip>
                                                    <Grid HorizontalAlignment="Stretch" Margin="40,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <SymbolIcon Symbol="ReShare" />
                                                        <TextBlock Margin="5,0" Grid.Column="1"
                                                               HorizontalAlignment="Center" Text="Rewatching" />
                                                    </Grid>
                                                </ToggleButton>
                                                <Button Grid.Column="1" Margin="0,0,0,5" Background="{ThemeResource BrushDetailsMoreButton}" Height="40" Width="40" Visibility="{Binding MalApiSpecificControlsVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Button.Flyout>
                                                        <Flyout x:Name="RewatchingFlyout">
                                                            <StackPanel>
                                                                <StackPanel.Resources>
                                                                    <ResourceDictionary>
                                                                        <ResourceDictionary.MergedDictionaries>
                                                                            <ResourceDictionary Source="/XamlResources/FancyListFlyoutStyle.xaml"/>
                                                                        </ResourceDictionary.MergedDictionaries>
                                                                    </ResourceDictionary>
                                                                </StackPanel.Resources>
                                                                <TextBlock HorizontalAlignment="Center">
                                                                    Times <Run Text="{Binding RewatchedLabel}"/>
                                                                </TextBlock>
                                                                <ListView Style="{StaticResource FancyListFlyoutStyle}" ItemsSource="{Binding RewatchedOptions}" ItemClick="RewatchedFlyoutOnItemSelected">
                                                                    <ListView.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <TextBlock HorizontalAlignment="Center" Text="{Binding}"/>
                                                                        </DataTemplate>
                                                                    </ListView.ItemTemplate>
                                                                </ListView>
                                                            </StackPanel>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                    <SymbolIcon Symbol="More"/>
                                                </Button>
                                            </Grid>
                                            <Button Height="40" Margin="0,0,0,5" HorizontalAlignment="Stretch"
                                                    Command="{Binding NavigateForumBoardCommand}" Background="{ThemeResource BrushDetailsMoreButton}"
                                                    Visibility="{Binding MalApiSpecificControlsVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="Forum board" />
                                                </ToolTipService.ToolTip>
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Symbol="Comment" />
                                                    <TextBlock Margin="5,0" Grid.Column="1"
                                                               HorizontalAlignment="Center" Text="Forum board" />
                                                </Grid>
                                            </Button>                                            
                                            <Button Height="40" Margin="0,0,0,5" HorizontalAlignment="Stretch"
                                                    Command="{Binding LoadVideosCommand}" Background="{ThemeResource BrushDetailsMoreButton}">
                                                <Button.Flyout>
                                                    <Flyout x:Name="PromotionalVideosFlyout" Placement="Full">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>
                                                            <StackPanel>
                                                                <TextBlock Text="Promotional videos" HorizontalAlignment="Center" Margin="5,0" FontSize="20"/>
                                                                <MenuFlyoutSeparator Margin="0,5"/>
                                                            </StackPanel>

                                                            <ListView Margin="-10,0" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Visible" Visibility="{Binding LoadingVideosVisibility,Converter={StaticResource BoolToVisibilityInvertedConverter}}" ItemsSource="{Binding AvailableVideos}" IsItemClickEnabled="True" ItemClick="VideosListViewOnItemCLick">
                                                                <ListView.ItemContainerStyle>
                                                                    <Style TargetType="ListViewItem">
                                                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                                        <Setter Property="Margin" Value="0,5"/>
                                                                        <Setter Property="Background" Value="{ThemeResource BrushHamburgerInnerBackground}"/>
                                                                    </Style>
                                                                </ListView.ItemContainerStyle>
                                                                <ListView.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid Width="320"  Background="{StaticResource BrushAnimeItemInnerBackground}">
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition Height="180"/>
                                                                                <RowDefinition Height="Auto"/>
                                                                            </Grid.RowDefinitions>
                                                                            <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill">
                                                                                <Image.Source>
                                                                                    <BitmapImage UriSource="{Binding Thumb}" DecodePixelType="Logical" DecodePixelHeight="180" DecodePixelWidth="320"/>
                                                                                </Image.Source>
                                                                            </Image>
                                                                            <Grid Grid.Row="1" MinHeight="40" BorderThickness="0,1,0,0" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                                                                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,10" TextWrapping="WrapWholeWords"/>
                                                                            </Grid>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ListView.ItemTemplate>
                                                            </ListView>
                                                            <ProgressRing Grid.Row="1" IsActive="True" Width="30" Height="30" Margin="0,20" Visibility="{Binding LoadingVideosVisibility,Converter={StaticResource BoolToVisibilityConverter}}" HorizontalAlignment="Center"/>
                                                            <TextBlock Grid.Row="1" Margin="0,20" Text="Promotional videos unavailable..." TextWrapping="WrapWholeWords" Visibility="{Binding NoVideosNoticeVisibility,Converter={StaticResource BoolToVisibilityConverter}}" Foreground="{ThemeResource BrushNoSearchResults}"/>
                                                        </Grid>
                                                    </Flyout>
                                                </Button.Flyout>
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Symbol="Video" />
                                                    <TextBlock Margin="5,0" Grid.Column="1"
                                                               HorizontalAlignment="Center" Text="Promotional videos" />
                                                </Grid>
                                            </Button>
                                            <Button Height="40" Margin="0,0,0,5" HorizontalAlignment="Stretch"
                                                    Background="{ThemeResource BrushDetailsMoreButton}"
                                                    Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Button.Flyout>
                                                    <Flyout Placement="Left">
                                                        <Grid MinWidth="230">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" MaxHeight="200" />
                                                                <RowDefinition Height="Auto" MaxHeight="200" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock FontWeight="Medium" Text="Tags"
                                                                       HorizontalAlignment="Center" Margin="2,0,2,5" />
                                                            <ListView Grid.Row="1" SelectionMode="None"
                                                                      ItemsSource="{Binding MyTags}">
                                                                <ListView.ItemContainerStyle>
                                                                    <Style TargetType="ListViewItem">
                                                                        <Setter Property="HorizontalContentAlignment"
                                                                                Value="Stretch" />
                                                                        <Setter Property="BorderBrush"
                                                                                Value="{StaticResource SystemControlBackgroundAccentBrush}" />
                                                                        <Setter Property="BorderThickness"
                                                                                Value="2,0,0,0" />
                                                                        <Setter Property="Margin" Value="0,2" />
                                                                        <Setter Property="Background">
                                                                            <Setter.Value>
                                                                                <SolidColorBrush Color="Black"
                                                                                                 Opacity=".25" />
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </ListView.ItemContainerStyle>
                                                                <ListView.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid HorizontalAlignment="Stretch">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="Auto" />
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="Auto" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <SymbolIcon Symbol="Tag" />
                                                                            <TextBlock Grid.Column="1"
                                                                                       TextTrimming="CharacterEllipsis"
                                                                                       VerticalAlignment="Center"
                                                                                       HorizontalAlignment="Center"
                                                                                       FontWeight="Medium"
                                                                                       Text="{Binding}" />
                                                                            <Button Grid.Column="2"
                                                                                    Background="Transparent"
                                                                                    Padding="0" Width="30" Height="30"
                                                                                    CommandParameter="{Binding}"
                                                                                    Command="{Binding Source={StaticResource Locator},Path=AnimeDetails.RemoveTagCommand}">
                                                                                <SymbolIcon Symbol="Delete" />
                                                                            </Button>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ListView.ItemTemplate>
                                                            </ListView>
                                                            <MenuFlyoutSeparator Grid.Row="2" />
                                                            <StackPanel Grid.Row="3" HorizontalAlignment="Stretch">
                                                                <TextBlock Text="Add new tag:"
                                                                           HorizontalAlignment="Center" />
                                                                <Grid HorizontalAlignment="Stretch">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBox Margin="3,2" HorizontalAlignment="Stretch"
                                                                             Text="{x:Bind ViewModel.NewTagInput,Mode=TwoWay}" />
                                                                    <Button Grid.Column="1" Padding="0" Width="32"
                                                                            Height="32"
                                                                            Command="{x:Bind ViewModel.AddTagCommand}">
                                                                        <SymbolIcon Symbol="Add" />
                                                                    </Button>
                                                                </Grid>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Flyout>
                                                </Button.Flyout>
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Symbol="Tag" />
                                                    <TextBlock Margin="5,0" Grid.Column="1"
                                                               HorizontalAlignment="Center" Text="Tags" />
                                                </Grid>
                                            </Button>
                                            <Button Height="40" HorizontalAlignment="Stretch"
                                                    Command="{Binding CopyToClipboardCommand}"
                                                    Background="{ThemeResource BrushDetailsMoreButton}">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Margin="3,0" Symbol="Copy" />
                                                    <TextBlock Margin="5,0" Grid.Column="1"
                                                               HorizontalAlignment="Center"
                                                               Text="Copy link to clipboard" />
                                                </Grid>
                                            </Button>
                                            <Button Margin="0,5,0,0" Height="40" HorizontalAlignment="Stretch"
                                                    Command="{Binding OpenInMalCommand}"
                                                    Background="{ThemeResource BrushDetailsMoreButton}">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Margin="3,0" Symbol="Globe" />
                                                    <TextBlock Margin="5,0" Grid.Column="1"
                                                               HorizontalAlignment="Center" Text="Open in browser" />
                                                </Grid>
                                            </Button>
                                            <Button x:Name="BtnAddAnime" HorizontalAlignment="Stretch" Height="40"
                                                    Command="{Binding AddAnimeCommand}"
                                                    IsEnabled="{Binding IsAddAnimeButtonEnabled}"
                                                    Visibility="{Binding AddAnimeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Background="{ThemeResource BrushDetailsMoreButton}"
                                                    Margin="0,5,0,0">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Margin="3,0" Symbol="Add" />
                                                    <TextBlock Margin="5,0" Grid.Column="1"
                                                               HorizontalAlignment="Center" Text="Add to my list" />
                                                </Grid>
                                            </Button>
                                            <Button Height="40"
                                                    Visibility="{Binding AddAnimeVisibility,Converter={StaticResource BoolToVisibilityInvertedConverter}}"
                                                    Command="{Binding RemoveAnimeCommand}"
                                                    IsEnabled="{Binding IsRemoveAnimeButtonEnabled}"
                                                    HorizontalAlignment="Stretch"
                                                    Background="{ThemeResource BrushDetailsMoreButton}"
                                                    Margin="0,5,0,0">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Margin="3,0" Symbol="Delete" />
                                                    <TextBlock Margin="5,0" Grid.Column="1"
                                                               HorizontalAlignment="Center" Text="Remove from my list" />
                                                </Grid>
                                            </Button>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>

                        <StackPanel
                            Visibility="{Binding AddAnimeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                            Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="This entry is not on your list yet."
                                       Foreground="{StaticResource SystemControlBackgroundAccentBrush}"
                                       HorizontalAlignment="Center" Opacity=".75" />
                            <Button HorizontalAlignment="Stretch" Height="50"
                                    Command="{Binding AddAnimeCommand}"
                                    IsEnabled="{Binding IsAddAnimeButtonEnabled}"
                                    Background="{ThemeResource AppBarBackgroundThemeBrush}"
                                    Margin="20,10,20,0"
                                    BorderThickness="2"
                                    BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                                <StackPanel Orientation="Horizontal">
                                    <SymbolIcon Symbol="Add" />
                                    <TextBlock Margin="10,0,0,0" Text="Add to my list" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Visibility="{Binding MyDetailsVisibility}">
                            <Button HorizontalAlignment="Stretch" Height="40" Width="40"
                                    RenderTransformOrigin="0.5,0.5"
                                    Command="{Binding IncrementEpsCommand}"
                                    IsEnabled="{Binding IsIncrementButtonEnabled}"
                                    Background="{ThemeResource AppBarBackgroundThemeBrush}"
                                    Margin="5"
                                    BorderThickness="2"
                                    BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                                <SymbolIcon Symbol="Add" />
                                <Button.RenderTransform>
                                    <ScaleTransform ScaleY=".75" ScaleX=".75" />
                                </Button.RenderTransform>
                            </Button>
                            <Button HorizontalAlignment="Stretch" Height="40" Width="40"
                                    RenderTransformOrigin="0.5,0.5"
                                    Command="{Binding  DecrementEpsCommand}"
                                    IsEnabled="{Binding IsDecrementButtonEnabled}"
                                    Background="{ThemeResource AppBarBackgroundThemeBrush}"
                                    Margin="5,0"
                                    BorderThickness="2"
                                    BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                                <SymbolIcon Symbol="Remove" />
                                <Button.RenderTransform>
                                    <ScaleTransform ScaleY=".75" ScaleX=".75" />
                                </Button.RenderTransform>
                            </Button>
                        </StackPanel>
                        <ProgressRing Grid.Row="0" Grid.Column="1" Width="30" Height="30" Margin="0,10,45,0"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Top" IsActive="True"
                                      Visibility="{Binding LoadingUpdate,Converter={StaticResource BoolToVisibilityConverter}}" />
                        <Grid Grid.Row="0" Grid.Column="1"
                              Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                              Margin="5,-10,0,0">
                            <StackPanel Orientation="Vertical" Margin="1,5,1,0" HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                <StackPanel Margin="0,2,0,1" Orientation="Horizontal">
                                    <TextBlock Text="Score" VerticalAlignment="Center" Width="70" />
                                    <Button FontWeight="Medium" Margin="2,1,1,1"
                                            BorderThickness="0,0,0,1.5" Background="Transparent"
                                            BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                            Height="Auto"
                                            VerticalAlignment="Center"
                                            Content="{Binding MyScoreBind}">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyout.Items>
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[0]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="10" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[1]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="9" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[2]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="8" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[3]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="7" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[4]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="6" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[5]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="5" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[6]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="4" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[7]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="3" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[8]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="2" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[9]}"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="1" />
                                                    <MenuFlyoutItem Text="Unranked"
                                                                    Command="{Binding ChangeScoreCommand}"
                                                                    CommandParameter="0" />
                                                </MenuFlyout.Items>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                                <StackPanel Margin="0,2,0,1" Orientation="Horizontal">
                                    <TextBlock Text="Status" FontWeight="SemiLight" VerticalAlignment="Center"
                                               Width="70" />
                                    <Button Margin="2,1,1,1"
                                            BorderThickness="0,0,0,1.5" Background="Transparent"
                                            BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                            Height="Auto"
                                            VerticalAlignment="Center">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyout.Items>
                                                    <MenuFlyoutItem Text="{Binding Status1Label}"
                                                                    Command="{Binding ChangeStatusCommand}"
                                                                    CommandParameter="Watching" />
                                                    <MenuFlyoutItem Text="Completed"
                                                                    Command="{Binding ChangeStatusCommand}"
                                                                    CommandParameter="Completed" />
                                                    <MenuFlyoutItem Text="On hold"
                                                                    Command="{Binding ChangeStatusCommand}"
                                                                    CommandParameter="On hold" />
                                                    <MenuFlyoutItem Text="Dropped"
                                                                    Command="{Binding ChangeStatusCommand}"
                                                                    CommandParameter="Dropped" />
                                                    <MenuFlyoutItem Text="{Binding Status5Label}"
                                                                    Command="{Binding ChangeStatusCommand}"
                                                                    CommandParameter="Plan to watch" />
                                                </MenuFlyout.Items>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                        <TextBlock Text="{Binding MyStatusBind}" FontWeight="Medium" />
                                    </Button>
                                </StackPanel>
                                <StackPanel Margin="0,2,0,1" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Width="70"
                                               Text="{Binding WatchedEpsLabel}" />
                                    <Button FontWeight="Medium" Margin="2,1,1,1"
                                            BorderThickness="0,0,0,1.5" Background="Transparent"
                                            BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                            VerticalAlignment="Center"
                                            Content="{Binding MyEpisodesBind}" Click="WatchedButtonOnClick">
                                        <Button.Flyout>
                                            <Flyout x:Name="WatchedEpsFlyout">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding UpdateEpsUpperLabel,Converter={StaticResource StringToFlatStringConverter}}" HorizontalAlignment="Center"
                           FontWeight="SemiBold" Margin="0,0,0,5" />
                                                    <Grid HorizontalAlignment="Stretch" Width="150" Margin="4,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBox x:Name="TxtBoxWatchedEps" BorderThickness="0" Height="30"
