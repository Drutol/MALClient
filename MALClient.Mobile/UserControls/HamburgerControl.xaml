<UserControl
    x:Class="MALClient.UserControls.HamburgerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MALClient.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xamlConverters="using:MALClient.Shared.XamlConverters"
    mc:Ignorable="d"
    DataContext="{Binding Hamburger , Source={StaticResource MobileLocator}}"
    d:DesignHeight="300"
    d:DesignWidth="400" IsTabStop="False">

    <UserControl.Resources>
        <xamlConverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <xamlConverters:VisiblityInverterConverter x:Key="VisiblityInverterConverter" />
        <Storyboard x:Name="SupportMeStoryboard" TargetName="HearthSupport" TargetProperty="Color" AutoReverse="True" RepeatBehavior="Forever">
            <ColorAnimation From="{StaticResource SystemAccentColor}" To="Red" SpeedRatio=".5"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid VerticalAlignment="Stretch">
        <Grid Background="{ThemeResource BrushHamburgerBackground}">
            <Grid.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/XamlResources/DictionaryHamburger.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4" />
            </Grid.ColumnDefinitions>
            <Grid Background="{StaticResource SystemControlBackgroundAccentBrush}" Grid.Column="1" />
            <Grid Grid.Column="1">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity=".25" />
                </Grid.Background>
            </Grid>
            <ScrollViewer x:Name="ScrlBurger" VerticalScrollBarVisibility="Hidden" VerticalAlignment="Stretch">
                <Grid HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="Pivot" BasedOn="{StaticResource PivotHamburgerStyle}" />
                            <Style TargetType="Button">
                                <Setter Property="Padding" Value="1,0" />
                            </Style>
                            <Style TargetType="SymbolIcon">
                                <Setter Property="Margin" Value="3,0,0,0" />
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MinHeight="200" />
                            <RowDefinition Height="*" MinHeight="20" />
                            <RowDefinition Height="Auto" MinHeight="120" />
                        </Grid.RowDefinitions>
                        <Pivot Width="270" IsTabStop="False" SelectedIndex="{Binding MenuPivotSelectedIndex}">
                            <Pivot.Resources>
                                <Style TargetType="PivotHeaderItem"
                                       BasedOn="{StaticResource PivotHeaderItemHamburgerStyle}">
                                    <Setter Property="Margin" Value="0,0" />
                                </Style>
                                <Style TargetType="PivotItem">
                                    <Setter Property="Margin" Value="0,4,0,0" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </Pivot.Resources>
                            <Pivot.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock FontWeight="SemiBold" FontSize="15" Margin="0,0,0,18"
                                                   Text="{Binding}" />
                                    </Grid>
                                </DataTemplate>
                            </Pivot.HeaderTemplate>
                            <Pivot.Items>
                                <PivotItem Header="Anime" x:Name="AnimePivot">
                                    <StackPanel VerticalAlignment="Top">
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="0">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="45" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[AnimeList]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon HorizontalAlignment="Center" Symbol="List"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtList , Path=Foreground}" />
                                                <TextBlock x:Name="TxtList" Text="Anime List"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[AnimeList]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                                <Button BorderThickness="0" Background="Transparent" Height="40" Width="40" Grid.Column="2" Padding="0" Margin="0,0,7,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <SymbolIcon Symbol="Remote" HorizontalAlignment="Center"
                                                                VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5"
                                                                Foreground="{Binding ElementName=TxtList , Path=Foreground}" >
                                                        <SymbolIcon.RenderTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </SymbolIcon.RenderTransform>
                                                    </SymbolIcon>
                                                    <Button.Flyout>
                                                        <MenuFlyout Placement="Right">
                                                            <MenuFlyoutItem Text="Watching" Command="{Binding NavigateAnimeListCategoryCommand}" CommandParameter="0"/>
                                                            <MenuFlyoutItem Text="Completed" Command="{Binding NavigateAnimeListCategoryCommand}" CommandParameter="1"/>
                                                            <MenuFlyoutItem Text="On hold" Command="{Binding NavigateAnimeListCategoryCommand}" CommandParameter="2"/>
                                                            <MenuFlyoutItem Text="Dropped" Command="{Binding NavigateAnimeListCategoryCommand}" CommandParameter="3"/>
                                                            <MenuFlyoutItem Text="Plan to watch" Command="{Binding NavigateAnimeListCategoryCommand}" CommandParameter="4"/>
                                                            <MenuFlyoutItem Text="All" Command="{Binding NavigateAnimeListCategoryCommand}" CommandParameter="5"/>
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </Grid>
                                        </Button>
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="3">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[AnimeSearch]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="Find" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtSearch , Path=Foreground}" />
                                                <TextBlock x:Name="TxtSearch" Text="Anime Search"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[AnimeSearch]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="8">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[Seasonal]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="SlideShow" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtSeasonal , Path=Foreground}" />
                                                <TextBlock x:Name="TxtSeasonal" Text="Seasonal Anime"

                                                               Foreground="{Binding Path=TxtForegroundBrushes[Seasonal]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="7"
                                                    Visibility="{Binding MalApiSpecificButtonsVisibility}">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[Recommendations]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="VideoChat" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtRecom , Path=Foreground}" />
                                                <TextBlock x:Name="TxtRecom" Text="Recommendations"

                                                               Foreground="{Binding Path=TxtForegroundBrushes[Recommendations]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="11">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="45" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[TopAnime]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="OutlineStar" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtTop , Path=Foreground}" />
                                                <TextBlock x:Name="TxtTop" Text="Top Anime"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[TopAnime]}"
                                                               HorizontalAlignment="Left" Margin="25,0,-40,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                                <Button BorderThickness="0" Background="Transparent" Height="40" Width="40" Grid.Column="2" Padding="0" Margin="0,0,7,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <SymbolIcon Symbol="Remote" HorizontalAlignment="Center"
                                                                VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5"
                                                                Foreground="{Binding ElementName=TxtTop , Path=Foreground}" >
                                                        <SymbolIcon.RenderTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </SymbolIcon.RenderTransform>
                                                    </SymbolIcon>
                                                    <Button.Flyout>
                                                        <MenuFlyout Placement="Right">
                                                            <MenuFlyoutItem Text="General" Command="{Binding ButtonNavigationTopAnimeCommand}" CommandParameter="0"/>
                                                            <MenuFlyoutItem Text="Airing" Command="{Binding ButtonNavigationTopAnimeCommand}" CommandParameter="1"/>
                                                            <MenuFlyoutItem Text="Upcoming" Command="{Binding ButtonNavigationTopAnimeCommand}" CommandParameter="2"/>
                                                            <MenuFlyoutItem Text="TV Series" Command="{Binding ButtonNavigationTopAnimeCommand}" CommandParameter="3"/>
                                                            <MenuFlyoutItem Text="Movies" Command="{Binding ButtonNavigationTopAnimeCommand}" CommandParameter="4"/>
                                                            <MenuFlyoutItem Text="OVAs" Command="{Binding ButtonNavigationTopAnimeCommand}" CommandParameter="5"/>
                                                            <MenuFlyoutItem Text="Popular" Command="{Binding ButtonNavigationTopAnimeCommand}" CommandParameter="6"/>
                                                            <MenuFlyoutItem Text="Favourites" Command="{Binding ButtonNavigationTopAnimeCommand}" CommandParameter="7"/>
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                </Button>

                                            </Grid>
                                        </Button>
                                        <Button HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="13">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[Calendar]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="CalendarWeek" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtCalendar , Path=Foreground}" />
                                                <TextBlock x:Name="TxtCalendar" Text="Calendar"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[Calendar]}"
                                                               HorizontalAlignment="Left" Grid.Column="1" Margin="25,0,0,0"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                    </StackPanel>
                                </PivotItem>
                                <PivotItem Header="Manga" Height="225" VerticalContentAlignment="Top" VerticalAlignment="Top">
                                    <StackPanel VerticalAlignment="Top">
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="9">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="45" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[MangaList]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon HorizontalAlignment="Center" Symbol="Library"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtMangaList , Path=Foreground}" />
                                                <TextBlock x:Name="TxtMangaList" Text="Manga List"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[MangaList]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                                <Button BorderThickness="0" Background="Transparent" Height="40" Width="40" Grid.Column="2" Padding="0" Margin="0,0,7,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <SymbolIcon Symbol="Remote" HorizontalAlignment="Center"
                                                                VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5"
                                                                Foreground="{Binding ElementName=TxtMangaList , Path=Foreground}" >
                                                        <SymbolIcon.RenderTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </SymbolIcon.RenderTransform>
                                                    </SymbolIcon>
                                                    <Button.Flyout>
                                                        <MenuFlyout Placement="Right">
                                                            <MenuFlyoutItem Text="Reading" Command="{Binding NavigateMangaListCategoryCommand}" CommandParameter="0"/>
                                                            <MenuFlyoutItem Text="Completed" Command="{Binding NavigateMangaListCategoryCommand}" CommandParameter="1"/>
                                                            <MenuFlyoutItem Text="On hold" Command="{Binding NavigateMangaListCategoryCommand}" CommandParameter="2"/>
                                                            <MenuFlyoutItem Text="Dropped" Command="{Binding NavigateMangaListCategoryCommand}" CommandParameter="3"/>
                                                            <MenuFlyoutItem Text="Plan to read" Command="{Binding NavigateMangaListCategoryCommand}" CommandParameter="4"/>
                                                            <MenuFlyoutItem Text="All" Command="{Binding NavigateMangaListCategoryCommand}" CommandParameter="5"/>
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </Grid>
                                        </Button>
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0" 
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="10"
                                                    Visibility="{Binding MalApiSpecificButtonsVisibility}">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[MangaSearch]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="Find" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtMangaSearch , Path=Foreground}" />
                                                <TextBlock x:Name="TxtMangaSearch" Text="Manga Search"

                                                               Foreground="{Binding Path=TxtForegroundBrushes[MangaSearch]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="12">
                                            <Grid Width="270" Height="45">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[TopManga]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="OutlineStar" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtTopManga , Path=Foreground}" />
                                                <TextBlock x:Name="TxtTopManga" Text="Top Manga"

                                                               Foreground="{Binding Path=TxtForegroundBrushes[TopManga]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                    </StackPanel>
                                </PivotItem>
                                <PivotItem Header="More">
                                    <StackPanel VerticalAlignment="Top">
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="14">
                                            <Grid Width="270" Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[Articles]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon HorizontalAlignment="Center" Symbol="PreviewLink"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtArticles , Path=Foreground}" />
                                                <TextBlock x:Name="TxtArticles" Text="Articles"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[Articles]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0" 
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="15">
                                            <Grid Width="270" Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[News]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="PostUpdate" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtNews , Path=Foreground}" />
                                                <TextBlock x:Name="TxtNews" Text="News"

                                                               Foreground="{Binding Path=TxtForegroundBrushes[News]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                        <MenuFlyoutSeparator Margin="0,5" HorizontalAlignment="Stretch" x:Name="MidSeparator" Background="{StaticResource SystemControlBackgroundAccentBrush}" />
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0" 
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="18">
                                            <Grid Width="270" Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[Forums]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="Comment" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtForums , Path=Foreground}" />
                                                <TextBlock x:Name="TxtForums" Text="Forums"

                                                               Foreground="{Binding Path=TxtForegroundBrushes[Forums]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>                                        
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0" 
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="22">
                                            <Grid Width="270" Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[CharacterSearch]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="Find" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtCharacterSearch , Path=Foreground}" />
                                                <TextBlock x:Name="TxtCharacterSearch" Text="Character Search"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[CharacterSearch]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>                                        
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0" 
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="23">
                                            <Grid Width="270" Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[Wallpapers]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="Pictures" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtWallpapers , Path=Foreground}" />
                                                <TextBlock x:Name="TxtWallpapers" Text="Images"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[Wallpapers]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>                                        
                                        <Button VerticalContentAlignment="Center" Background="Transparent"
                                                    BorderThickness="0" 
                                                    Command="{Binding ButtonNavigationCommand}"
                                                    CommandParameter="24">
                                            <Grid Width="270" Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                        BorderThickness="{Binding TxtBorderBrushThicknesses[PopularVideos]}"
                                                        BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                                        Grid.ColumnSpan="2" />
                                                <SymbolIcon Symbol="Video" HorizontalAlignment="Center"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                Foreground="{Binding ElementName=TxtPopVid , Path=Foreground}" />
                                                <TextBlock x:Name="TxtPopVid" Text="Promotional Videos"
                                                               Foreground="{Binding Path=TxtForegroundBrushes[PopularVideos]}"
                                                               HorizontalAlignment="Left" Margin="25,0,0,0"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               TextAlignment="Center" />
                                            </Grid>
                                        </Button>
                                    </StackPanel>
                                </PivotItem>
                            </Pivot.Items>
                        </Pivot>
                        <Grid VerticalAlignment="Stretch" Grid.Row="1" />
                        <StackPanel Grid.Row="2" Margin="{Binding BottomStackPanelMargin}">
                            <Button VerticalContentAlignment="Center" Background="Transparent"
                                    BorderThickness="0" Visibility="Visible">
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Donate $0.99" Tag="Donate1" Click="Donate"/>
                                        <MenuFlyoutItem Text="Donate $1.99" Tag="Donate2" Click="Donate"/>
                                        <MenuFlyoutItem Text="Donate $2.99" Tag="Donate3" Click="Donate"/>
                                        <MenuFlyoutItem Text="Donate $3.99" Tag="Donate4" Click="Donate"/>
                                    </MenuFlyout>
                                </Button.Flyout>
                                <Grid Width="270" Height="35">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xE006;" FontFamily="Segoe MDL2 Assets"
                                               HorizontalAlignment="Center" Grid.Column="0"
                                               VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5"
                                               Visibility="{Binding AdLoadingSpinnerVisibility,Converter={StaticResource VisiblityInverterConverter}}">
                                        <TextBlock.RenderTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </TextBlock.RenderTransform>
                                        <TextBlock.Foreground>
                                            <SolidColorBrush x:Name="HearthSupport" Color="{StaticResource SystemAccentColor}"/>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                    <ProgressRing VerticalAlignment="Center" HorizontalAlignment="Center"
                                                  Grid.Column="0" IsActive="True"
                                                  Visibility="{Binding AdLoadingSpinnerVisibility}" />
                                    <TextBlock Text="Support me!" HorizontalAlignment="Left" Margin="10,0,0,0"
                                               TextWrapping="WrapWholeWords" FontSize="15" FontWeight="SemiLight"
                                               Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center" />
                                    <Button Grid.Column="1" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                        FontFamily="Segoe MDL2 Assets" FontSize="22" Width="47" Height="47" Background="Transparent" Content="&#xE939;"
                                        Visibility="{Binding FeedbackHubButtonVisibility}">
                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="Submit feedback!"/>
                                        </ToolTipService.ToolTip>
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Github" Click="OpenRepo"/>
                                                <MenuFlyoutItem Text="Feedback hub" Click="FeedbackButton_OnClick"/>
                                                <MenuFlyoutItem Text="Email" Click="BtnFeedbackEmailOnClick"/>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                            </Button>
                            <Button VerticalContentAlignment="Center" Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding ButtonNavigationCommand}"
                                    CommandParameter="4" Visibility="{x:Bind ViewModel.LogInButtonVisibility,Mode=OneWay}">
                                <Grid Width="270" Height="40">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border BorderThickness="{Binding TxtBorderBrushThicknesses[LogIn]}"
                                            BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                            Grid.ColumnSpan="2" />
                                    <SymbolIcon Symbol="Contact" HorizontalAlignment="Center" Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Foreground="{Binding ElementName=TxtLogin , Path=Foreground}" />
                                    <TextBlock x:Name="TxtLogin" Text="{Binding LogInLabel}"
                                               HorizontalAlignment="Left" Margin="10,0,0,0"
                                               Foreground="{Binding Path=TxtForegroundBrushes[LogIn]}"
                                               Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center" />
                                </Grid>
                            </Button>
                            <Button x:Name="BtnProfile" VerticalContentAlignment="Center" Background="Transparent"
                                    Visibility="{Binding ProfileButtonVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                    BorderThickness="0" RightTapped="BtnProfile_OnClick" IsRightTapEnabled="True" Holding="BtnProfile_OnClick"
                                    Command="{Binding ButtonNavigationCommand}"
                                    CommandParameter="5">
                                <Grid Width="270" Height="47">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="1"
                                            BorderThickness="{Binding TxtBorderBrushThicknesses[Profile]}"
                                            BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" />
                                    <Ellipse Grid.Column="0"
                                       Width="33"
                                       Height="33" Margin="1,1,0,1"
                                       Visibility="{Binding UsrImgPlaceholderVisibility,Converter={StaticResource VisiblityInverterConverter}}" >
                                        <Ellipse.Fill>
                                            <ImageBrush Stretch="UniformToFill" ImageSource="{Binding UserImage}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <SymbolIcon Grid.Column="0" Width="33" Height="33" Symbol="WebCam"
                                                Visibility="{Binding UsrImgPlaceholderVisibility}" />
                                    <TextBlock Text="Profile" HorizontalAlignment="Left" Margin="10,0,0,0"
                                               Foreground="{Binding Path=TxtForegroundBrushes[Profile]}"
                                               Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center" />
                                </Grid>
                            </Button>
                            <Grid Background="{ThemeResource BrushHamburgerInnerBackground}" Visibility="{Binding ProfileButtonVisibility,Converter={StaticResource BoolToVisibilityConverter}}"  Margin="0,0,-1,0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <StackPanel x:Name="SubProfileSection" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Visibility="{Binding MalApiSpecificButtonsVisibility}" Background="Transparent"
                                        Width="47" Height="47">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="Pinned profiles"/>
                                            </ToolTipService.ToolTip>
                                            <Button.Flyout>
                                                <Flyout>
                                                    <Grid>
                                                        <Grid.Resources>
                                                            <ResourceDictionary>
                                                                <ResourceDictionary.MergedDictionaries>
                                                                    <ResourceDictionary Source="/XamlResources/FancyListFlyoutStyle.xaml"/>
                                                                </ResourceDictionary.MergedDictionaries>
                                                            </ResourceDictionary>
                                                        </Grid.Resources>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Text="Pinned profiles" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                                                        <ListView Grid.Row="1" Style="{StaticResource FancyListFlyoutStyle}" ItemsSource="{Binding PinnedProfiles}" IsItemClickEnabled="True" ItemClick="PinnedProfilesOnClick">
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding}"/>
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>
                                                        </ListView>
                                                    </Grid>
                                                </Flyout>
                                            </Button.Flyout>
                                            <SymbolIcon HorizontalAlignment="Center" Margin="0,0,2,0" VerticalAlignment="Center" Symbol="People"/>
                                        </Button>
                                        <Button Command="{Binding ButtonNavigationCommand}" CommandParameter="25" Visibility="{Binding MalApiSpecificButtonsVisibility}" Background="Transparent"
                                        Width="47" Height="47">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="My friends feed"/>
                                            </ToolTipService.ToolTip>
                                            <SymbolIcon HorizontalAlignment="Center" Margin="0,0,2,0" VerticalAlignment="Center" Symbol="ContactInfo"/>
                                        </Button>
                                    <Button Command="{Binding Source={StaticResource Locator},Path=ForumsMain.NavigateRecentTopicsCommand}" Visibility="{Binding MalApiSpecificButtonsVisibility}" Background="Transparent"
                                        Width="47" Height="47">
                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="My recent topics"/>
                                        </ToolTipService.ToolTip>
                                        <SymbolIcon HorizontalAlignment="Center" Margin="0,0,2,0" VerticalAlignment="Center" Symbol="Comment"/>
                                    </Button>
                                    <Button Command="{Binding ButtonNavigationCommand}" Visibility="{Binding MalApiSpecificButtonsVisibility}"
                                        CommandParameter="19" Background="Transparent"
                                        Width="47" Height="47">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="History"/>
                                            </ToolTipService.ToolTip>
                                            <SymbolIcon HorizontalAlignment="Center" VerticalAlignment="Center" Symbol="Clock"
                                                Margin="0,0,0,2" />
                                        </Button>
                                    <Button Command="{Binding ButtonNavigationCommand}" Visibility="{Binding MalApiSpecificButtonsVisibility}"
                                        CommandParameter="16" Background="Transparent"
                                        Width="47" Height="47" >
                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="Messaging"/>
                                        </ToolTipService.ToolTip>
                                        <SymbolIcon HorizontalAlignment="Center" VerticalAlignment="Center" Symbol="Mail"
                                                Margin="0,0,0,2" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                            <Button VerticalContentAlignment="Center" Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding ButtonNavigationCommand}"
                                    CommandParameter="2">
                                <Grid Width="270" Height="47">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border BorderThickness="{Binding TxtBorderBrushThicknesses[Settings]}"
                                            BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                            Grid.ColumnSpan="2" />
                                    <SymbolIcon Symbol="Setting" HorizontalAlignment="Center" Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Foreground="{Binding ElementName=TxtSettings , Path=Foreground}" />
                                    <TextBlock x:Name="TxtSettings" Text="Settings &amp; More" HorizontalAlignment="Left" Margin="10,0,0,0"
                                               Foreground="{Binding Path=TxtForegroundBrushes[Settings]}"
                                               Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center" />
                                </Grid>
                            </Button>
                            <Grid Height="{Binding GridBtmMarginHeight}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>