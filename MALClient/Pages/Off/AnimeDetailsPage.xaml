                                                      Margin="0,50,0,0" VerticalAlignment="Top" IsActive="True" />
                                            </Grid>
                                            <ListView SelectionMode="None" ItemsSource="{Binding Recommendations}"
                                              SelectedItem="{Binding CurrentRecommendationsSelectedItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,2" HorizontalAlignment="Stretch">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="220" />
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" MaxWidth="200" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="*" />
                                                                </Grid.RowDefinitions>
                                                                <StackPanel Grid.ColumnSpan="2" Margin="5,0">
                                                                    <TextBlock Text="{Binding Title}"
                                                                       TextTrimming="CharacterEllipsis" FontSize="18"
                                                                       FontWeight="Medium" />
                                                                    <TextBlock Text="{Binding Type}" FontWeight="SemiLight"
                                                                       FontStyle="Italic" FontSize="13"
                                                                       VerticalAlignment="Bottom" Margin="0,0,5,5"
                                                                       Foreground="{StaticResource SystemControlBackgroundAccentBrush}" />
                                                                </StackPanel>
                                                                <Button Margin="1" Grid.Column="0" Grid.Row="1" MaxWidth="125"
                                                                Command="{Binding Source={StaticResource Locator}, Path=AnimeDetails.NavigateDetailsCommand}"
                                                                CommandParameter="{Binding}"
                                                                HorizontalAlignment="Left" Background="Transparent"
                                                                Padding="0"
                                                                VerticalAlignment="Stretch">
                                                                    <Grid>
                                                                        <Image
                                                                    controlsExt:ImageExtensions.FadeInOnLoaded="True"
                                                                    Source="{Binding ImageUrl,Converter={StaticResource UrlToBitmapImageConverter}}"
                                                                    Width="Auto" VerticalAlignment="Stretch"
                                                                    HorizontalAlignment="Left" Stretch="Uniform" />
                                                                        <Grid VerticalAlignment="Bottom"
                                                                      HorizontalAlignment="Left" Width="30" Height="30">
                                                                            <Grid.Background>
                                                                                <SolidColorBrush Color="Black" Opacity=".5" />
                                                                            </Grid.Background>
                                                                            <SymbolIcon Symbol="Go" Foreground="White" />
                                                                        </Grid>
                                                                    </Grid>
                                                                </Button>
                                                                <RichTextBlock Grid.Row="1" Grid.Column="1"
                                                                       VerticalAlignment="Stretch"
                                                                       OverflowContentTarget="{Binding ElementName=DescriptionOverflow}"
                                                                       TextTrimming="None"
                                                                       TextWrapping="WrapWholeWords"
                                                                       HorizontalAlignment="Left"
                                                                       IsTextSelectionEnabled="False" Margin="5">
                                                                    <Paragraph>
                                                                        <Run Text="{Binding Description}" />
                                                                    </Paragraph>
                                                                </RichTextBlock>
                                                            </Grid>
                                                            <RichTextBlockOverflow Grid.Row="1" x:Name="DescriptionOverflow"
                                                                           Margin="5" />
                                                            <MenuFlyoutSeparator Grid.Row="2" Margin="-7,5" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Grid>
                                    </ScrollViewer>
                                </PivotItem.Content>
                            </PivotItem>
                            <PivotItem Tag="Related">
                                <PivotItem.Header>
                                    Related
                                </PivotItem.Header>
                                <PivotItem.Content>
                                    <ScrollViewer>
                                        <Grid>
                                            <Grid VerticalAlignment="Stretch">
                                                <TextBlock Visibility="{Binding NoRelatedDataNoticeVisibility}"
                                                   Text="Related anime unavailable :("
                                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   FontSize="30" FontWeight="SemiLight" TextWrapping="WrapWholeWords"
                                                   Foreground="{StaticResource SystemControlBackgroundAccentBrush}" />
                                            </Grid>
                                            <Grid Visibility="{Binding LoadingRelated}" VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch" Background="{ThemeResource BrushLoading}">
                                                <ProgressRing HorizontalAlignment="Stretch" Width="100" Height="100"
                                                      Margin="0,50,0,0" VerticalAlignment="Top" IsActive="True" />
                                            </Grid>
                                            <ListView ItemsSource="{Binding RelatedAnime}" SelectionMode="None">
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                        <Setter Property="BorderBrush"
                                                        Value="{StaticResource SystemControlBackgroundAccentBrush}" />
                                                        <Setter Property="BorderThickness" Value="5,0,0,0" />
                                                        <Setter Property="Margin" Value="5" />
                                                        <Setter Property="Background"
                                                        Value="{ThemeResource BrushDetailsRelatedBackground}" />
                                                        <Setter Property="Padding" Value="0" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Button Margin="0" Style="{StaticResource TextBlockButtonStyle}"
                                                            IsEnabled="{Binding Type , Converter={StaticResource RelatedAnimeTypeToBoolConverter}}"
                                                            Background="Transparent"
                                                            HorizontalAlignment="Stretch"
                                                            Command="{Binding Source={StaticResource Locator} ,Path=AnimeDetails.NavigateDetailsCommand}"
                                                            CommandParameter="{Binding}">
                                                                <Button.Content>
                                                                    <TextBlock Text="{Binding WholeRelation}"
                                                                       TextWrapping="WrapWholeWords" Margin="5,0" />
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Grid>
                                    </ScrollViewer>
                                </PivotItem.Content>
                            </PivotItem>
                        </Pivot.Items>
                    </Pivot>

                    <Grid Grid.Row="0" Grid.RowSpan="2" Visibility="{Binding LoadingGlobal}"
                  Background="{ThemeResource BrushLoading}">
                        <ProgressRing HorizontalAlignment="Stretch" Width="100" Height="100" VerticalAlignment="Stretch"
                              IsActive="True" />
                    </Grid>

                </Grid>
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="{Binding ImageOverlayVisibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.Background>
                        <SolidColorBrush Color="Black" Opacity=".75" />
                    </Grid.Background>
                    <FlipView
                SelectedIndex="{Binding CurrentlySelectedImagePivotIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                SelectionChanged="ImagePivot_OnSelectionChanged" RequestedTheme="Dark">
                        <Grid>
                            <ScrollViewer x:Name="StockImgScrollViewer" VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch" DoubleTapped="ScrollViewer_OnDoubleTapped"
                                  VerticalScrollBarVisibility="Auto" MinZoomFactor="0.5" MaxZoomFactor="3"
                                  HorizontalScrollBarVisibility="Auto" Padding="10" ZoomMode="Enabled">
                                <Image controlsExt:ImageExtensions.FadeInOnLoaded="True" x:Name="MalImage"
                               Source="{Binding DetailImage}" Stretch="None" ImageOpened="MalImage_OnImageOpened" />
                            </ScrollViewer>
                        </Grid>
                        <Grid Visibility="{Binding MalApiSpecificControlsVisibility}">
                            <Grid Visibility="{Binding LoadingHummingbirdImage}">
                                <ProgressRing HorizontalAlignment="Stretch" Width="50" Height="50" VerticalAlignment="Stretch"
                                      IsActive="True" />
                            </Grid>
                            <TextBlock Text="Unavailable for manga. :(" Foreground="White" HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding AlternateImageUnavailableNoticeVisibility}" />
                            <ScrollViewer x:Name="AlternateImgScrollViewer" VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch" DoubleTapped="ScrollViewerAlternate_OnDoubleTapped"
                                  VerticalScrollBarVisibility="Auto" MinZoomFactor="0.5" MaxZoomFactor="3"
                                  HorizontalScrollBarVisibility="Auto" Padding="10" ZoomMode="Enabled">
                                <Image controlsExt:ImageExtensions.FadeInOnLoaded="True" x:Name="AlternateImage"
                               Source="{Binding HummingbirdImage}" Stretch="Uniform"
                               ImageOpened="AlternateImage_OnImageOpened" />
                            </ScrollViewer>
                        </Grid>
                    </FlipView>
                    <TextBlock Margin="5,0,0,0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                       x:Name="CurrentImgDimesnions" Foreground="{StaticResource SystemControlBackgroundAccentBrush}"
                       FontWeight="SemiLight" />
                    <Button Background="{ThemeResource BrushDetailsMoreButton}" Grid.Row="1"
                    Content="Save" HorizontalAlignment="Stretch" Margin="5"
                    Command="{Binding SaveImageCommand}"
                    BorderThickness="2" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" />
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>