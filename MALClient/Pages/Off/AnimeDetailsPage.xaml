<Page
    x:Class="MALClient.Pages.AnimeDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MALClient.Pages"
    xmlns:controlsExt="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:xamlConverters="using:MALClient.XamlConverters"
    xmlns:controls="using:MALClient.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:new="using:MALClient.UserControls.New"
    DataContext="{Binding AnimeDetails ,Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Page.Resources>
        <xamlConverters:VisiblityInverterConverter x:Key="VisiblityInverterConverter" />
        <xamlConverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <xamlConverters:UrlToBitmapImageConverter x:Key="UrlToBitmapImageConverter" />
        <xamlConverters:RelatedAnimeTypeToBoolConverter x:Key="RelatedAnimeTypeToBoolConverter" />
        <xamlConverters:StringToFlatStringConverter x:Key="StringToFlatStringConverter" />
    </Page.Resources>

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <EntranceNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="{ThemeResource BrushDetailsBackground}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="700"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ScrollingContainer.VerticalScrollBarVisibility" Value="Disabled"/>
                    </VisualState.Setters>
                </VisualState>                
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ScrollingContainer.VerticalScrollBarVisibility" Value="Hidden"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DetailImage.Width" Value="175"/>
                        <Setter Target="DetailImage.Height" Value="203"/>
                    </VisualState.Setters>
                </VisualState>                
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DetailImage.Width" Value="120"/>
                        <Setter Target="DetailImage.Height" Value="148"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <ScrollViewer x:Name="ScrollingContainer">
            <Grid>
                <Grid>
                    <Grid.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="/XamlResources/DictionaryRecommendations.xaml" />
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!--Img + Details-->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Row="0" Background="{ThemeResource BrushDetailsUpperBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <!--Img-->
                            <ColumnDefinition Width="*" />
                            <!--Controls-->
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition MinHeight="0" MaxHeight="100" Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" BorderThickness="0,0,0,1"
                        Grid.Column="0">
                            <Image x:Name="DetailImage" controlsExt:ImageExtensions.FadeInOnLoaded="True" Tapped="Image_OnTapped" Margin="1,1,1,1"
                           Source="{Binding DetailImage}" Stretch="Fill"/>
                        </Border>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <new:FavButton Visibility="{Binding MalApiSpecificControlsVisibility}"/>
                            <Button VerticalAlignment="Bottom" Background="Transparent" RenderTransformOrigin="0.5,0.5">
                                <SymbolIcon Symbol="More" RenderTransformOrigin="0.5,0.5"
                                Foreground="{StaticResource SystemControlBackgroundAccentBrush}">
                                    <SymbolIcon.RenderTransform>
                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                    </SymbolIcon.RenderTransform>
                                </SymbolIcon>
                                <Button.Flyout>
                                    <Flyout>
                                        <StackPanel>
                                            <Button Height="40" Margin="0,0,0,5" HorizontalAlignment="Stretch"
                                                    Background="{ThemeResource BrushDetailsMoreButton}" Visibility="{Binding MalApiSpecificControlsVisibility}">
                                                <Button.Flyout>
                                                    <Flyout Placement="Left">
                                                        <Grid MinWidth="230">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto" MaxHeight="200"/>
                                                                <RowDefinition Height="Auto" MaxHeight="200"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <TextBlock FontWeight="Medium" Text="Tags"  HorizontalAlignment="Center" Margin="2,0,2,5"/>
                                                            <ListView Grid.Row="1" SelectionMode="None" ItemsSource="{Binding MyTags}">
                                                                <ListView.ItemContainerStyle>
                                                                    <Style TargetType="ListViewItem">
                                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                        <Setter Property="BorderBrush" Value="{StaticResource SystemControlBackgroundAccentBrush}"/>
                                                                        <Setter Property="BorderThickness" Value="2,0,0,0"/>
                                                                        <Setter Property="Margin" Value="0,2"/>
                                                                        <Setter Property="Background">
                                                                            <Setter.Value>
                                                                                <SolidColorBrush Color="Black" Opacity=".25"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </ListView.ItemContainerStyle>
                                                                <ListView.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid HorizontalAlignment="Stretch">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <SymbolIcon Symbol="Tag"/>
                                                                            <TextBlock Grid.Column="1" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Medium"  Text="{Binding}"/>
                                                                            <Button Grid.Column="2" Background="Transparent" Padding="0" Width="30" Height="30" CommandParameter="{Binding}" Command="{Binding Source={StaticResource Locator},Path=AnimeDetails.RemoveTagCommand}">
                                                                                <SymbolIcon Symbol="Delete"/>
                                                                            </Button>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ListView.ItemTemplate>
                                                            </ListView>
                                                            <MenuFlyoutSeparator Grid.Row="2"></MenuFlyoutSeparator>
                                                            <StackPanel Grid.Row="3" HorizontalAlignment="Stretch">
                                                                <TextBlock  Text="Add new tag:" HorizontalAlignment="Center"/>
                                                                <Grid HorizontalAlignment="Stretch">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBox Margin="3,2" HorizontalAlignment="Stretch" Text="{x:Bind ViewModel.NewTagInput,Mode=TwoWay}"/>
                                                                    <Button Grid.Column="1" Padding="0" Width="32" Height="32" Command="{x:Bind ViewModel.AddTagCommand}">
                                                                        <SymbolIcon Symbol="Add"/>
                                                                    </Button>
                                                                </Grid>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Flyout>
                                                </Button.Flyout>
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Symbol="Tag" />
                                                    <TextBlock Margin="5,0" Grid.Column="1" HorizontalAlignment="Center" Text="Tags"  />
                                                </Grid>
                                            </Button>
                                            <Button Height="40" HorizontalAlignment="Stretch"
                                        Command="{Binding CopyToClipboardCommand}"
                                        Background="{ThemeResource BrushDetailsMoreButton}">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Margin="3,0" Symbol="Copy" />
                                                    <TextBlock Margin="5,0" Grid.Column="1" HorizontalAlignment="Center" Text="Copy link to clipboard" />
                                                </Grid>
                                            </Button>
                                            <Button Margin="0,5,0,0" Height="40" HorizontalAlignment="Stretch"
                                        Command="{Binding OpenInMalCommand}"
                                        Background="{ThemeResource BrushDetailsMoreButton}">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Margin="3,0" Symbol="Globe" />
                                                    <TextBlock Margin="5,0" Grid.Column="1" HorizontalAlignment="Center" Text="Open in browser" />
                                                </Grid>
                                            </Button>
                                            <Button x:Name="BtnAddAnime" HorizontalAlignment="Stretch" Height="40"
                                        Command="{Binding AddAnimeCommand}"
                                        IsEnabled="{Binding AddAnimeBtnEnableState}"
                                        Visibility="{Binding AddAnimeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                                        Background="{ThemeResource BrushDetailsMoreButton}" Margin="0,5,0,0">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Margin="3,0" Symbol="Add" />
                                                    <TextBlock Margin="5,0" Grid.Column="1" HorizontalAlignment="Center" Text="Add to my list" />
                                                </Grid>
                                            </Button>
                                            <Button Height="40"
                                        Visibility="{Binding ElementName=BtnAddAnime,Path=Visibility,Converter={StaticResource VisiblityInverterConverter}}"
                                        Command="{Binding RemoveAnimeCommand}"
                                        IsEnabled="{Binding RemoveAnimeBtnEnableState}"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource BrushDetailsMoreButton}"
                                        Margin="0,5,0,0">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <SymbolIcon Margin="3,0" Symbol="Delete" />
                                                    <TextBlock Margin="5,0" Grid.Column="1" HorizontalAlignment="Center" Text="Remove from my list" />
                                                </Grid>
                                            </Button>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>

                        <StackPanel
                    Visibility="{Binding AddAnimeVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                    Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="This entry is not on your list yet."
                               Foreground="{StaticResource SystemControlBackgroundAccentBrush}"
                               HorizontalAlignment="Center" Opacity=".75" />
                            <Button HorizontalAlignment="Stretch" Height="50"
                            Command="{Binding AddAnimeCommand}"
                            IsEnabled="{Binding AddAnimeBtnEnableState}"
                            Background="{ThemeResource AppBarBackgroundThemeBrush}"
                            Margin="20,10,20,0"
                            BorderThickness="2" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                                <StackPanel Orientation="Horizontal">
                                    <SymbolIcon Symbol="Add" />
                                    <TextBlock Margin="10,0,0,0" Text="Add to my list" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button HorizontalAlignment="Stretch" Height="40" Width="40" RenderTransformOrigin="0.5,0.5"
                        Command="{Binding IncrementEpsCommand}"
                        IsEnabled="{Binding IsIncrementButtonEnabled}"
                        Background="{ThemeResource AppBarBackgroundThemeBrush}"
                        Margin="5"
                        BorderThickness="2" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                                <SymbolIcon Symbol="Add" />
                                <Button.RenderTransform>
                                    <ScaleTransform ScaleY=".75" ScaleX=".75" />
                                </Button.RenderTransform>
                            </Button>
                            <Button HorizontalAlignment="Stretch" Height="40" Width="40" RenderTransformOrigin="0.5,0.5"
                        Command="{Binding  DecrementEpsCommand}"
                        IsEnabled="{Binding IsDecrementButtonEnabled}"
                        Background="{ThemeResource AppBarBackgroundThemeBrush}"
                        Margin="5,0"
                        BorderThickness="2" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}">
                                <SymbolIcon Symbol="Remove" />
                                <Button.RenderTransform>
                                    <ScaleTransform ScaleY=".75" ScaleX=".75" />
                                </Button.RenderTransform>
                            </Button>
                        </StackPanel>
                        <ProgressRing Grid.Row="0" Grid.Column="1" Width="30" Height="30" Margin="0,10,45,0" HorizontalAlignment="Right"
                              VerticalAlignment="Top" IsActive="True"
                              Visibility="{Binding LoadingUpdate,Converter={StaticResource BoolToVisibilityConverter}}" />
                        <Grid Grid.Row="0" Grid.Column="1"
                  Visibility="{Binding MyDetailsVisibility,Converter={StaticResource BoolToVisibilityConverter}}"
                  Margin="5,-10,0,0">
                            <StackPanel Orientation="Vertical" Margin="1,5,1,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <StackPanel Margin="0,2,0,1" Orientation="Horizontal">
                                    <TextBlock Text="Score" VerticalAlignment="Center" Width="70" />
                                    <Button FontWeight="Medium" Margin="2,1,1,1"
                                BorderThickness="0,0,0,1.5" Background="Transparent"
                                BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                Height="Auto"
                                VerticalAlignment="Center"
                                Content="{Binding MyScoreBind}">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyout.Items>
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[0]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="10" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[1]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="9" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[2]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="8" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[3]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="7" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[4]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="6" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[5]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="5" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[6]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="4" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[7]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="3" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[8]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="2" />
                                                    <MenuFlyoutItem Text="{Binding ScoreFlyoutChoices[9]}"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="1" />
                                                    <MenuFlyoutItem Text="Unranked"
                                                        Command="{Binding ChangeScoreCommand}"
                                                        CommandParameter="0" />
                                                </MenuFlyout.Items>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                                <StackPanel Margin="0,2,0,1" Orientation="Horizontal">
                                    <TextBlock Text="Status" FontWeight="SemiLight" VerticalAlignment="Center" Width="70" />
                                    <Button Margin="2,1,1,1"
                                BorderThickness="0,0,0,1.5" Background="Transparent"
                                BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" Height="Auto"
                                VerticalAlignment="Center">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyout.Items>
                                                    <MenuFlyoutItem Text="{Binding Status1Label}"
                                                        Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="Watching" />
                                                    <MenuFlyoutItem Text="Completed" Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="Completed" />
                                                    <MenuFlyoutItem Text="On hold" Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="On hold" />
                                                    <MenuFlyoutItem Text="Dropped" Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="Dropped" />
                                                    <MenuFlyoutItem Text="{Binding Status5Label}"
                                                        Command="{Binding ChangeStatusCommand}"
                                                        CommandParameter="Plan to watch" />
                                                </MenuFlyout.Items>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                        <TextBlock Text="{Binding MyStatusBind}" FontWeight="Medium"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Margin="0,2,0,1" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Width="70"
                                   Text="{Binding WatchedEpsLabel}" />
                                    <Button FontWeight="Medium" Margin="2,1,1,1"
                                BorderThickness="0,0,0,1.5" Background="Transparent"
                                BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                VerticalAlignment="Center"
                                Content="{Binding MyEpisodesBind}">
                                        <Button.Flyout>
                                            <Flyout x:Name="WatchedEpsFlyout">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding WatchedEpsLabel,Converter={StaticResource StringToFlatStringConverter}}" HorizontalAlignment="Center"
                                                   FontWeight="SemiLight" />
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBox x:Name="TxtBoxWatchedEps"
                                                     Text="{Binding WatchedEpsInput,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                     KeyDown="SubmitWatchedEps" />
                                                        <Button Command="{Binding ChangeWatchedCommand}" Click="WatchedEpsButton_OnClick" Margin="2,0,0,0">
                                                            <SymbolIcon Symbol="Accept" />
                                                        </Button>
                                                    </StackPanel>
                                                    <TextBlock Text="Wrong input!" FontWeight="SemiLight"
                                                   HorizontalAlignment="Center"
                                                   Visibility="{Binding WatchedEpsInputNoticeVisibility,Converter={StaticResource BoolToVisibilityConverter}}" />
                                                </StackPanel>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                                <StackPanel Margin="0,2,0,1" Orientation="Horizontal" Visibility="{Binding MyVolumesVisibility}">
                                    <TextBlock VerticalAlignment="Center" Width="70"
                                   Text="Read&#x0a;volumes" />
                                    <Button FontWeight="Medium" Margin="2,1,1,1"
                                BorderThickness="0,0,0,1.5" Background="Transparent"
                                BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}"
                                VerticalAlignment="Center"
                                Content="{Binding MyVolumesBind}">
                                        <Button.Flyout>
                                            <Flyout x:Name="ReadVolumesFlyout">
                                                <StackPanel>
                                                    <TextBlock Text="Read volumes:" HorizontalAlignment="Center"
                                                   FontWeight="SemiLight" />
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBox x:Name="TxtReadVolumes"
                                                     Text="{Binding ReadVolumesInput,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                     KeyDown="SubmitReadVolumes" />
                                                        <Button Command="{Binding ChangeVolumesCommand}" Click="ReadVolumesButton_OnClick" Margin="2,0,0,0">
                                                            <SymbolIcon Symbol="Accept" />
                                                        </Button>
                                                    </StackPanel>
                                                    <TextBlock Text="Wrong input!" FontWeight="SemiLight"
                                                   HorizontalAlignment="Center"
                                                   Visibility="{Binding WatchedEpsInputNoticeVisibility,Converter={StaticResource BoolToVisibilityConverter}}" />
                                                </StackPanel>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Pivot x:Name="MainPivot" Grid.Row="1" Grid.ColumnSpan="2" PivotItemLoading="Pivot_OnPivotItemLoading" MaxWidth="1000"
                   SelectedIndex="{Binding DetailsPivotSelectedIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                        <Pivot.Resources>
                            <Style TargetType="PivotHeaderItem" BasedOn="{StaticResource PivotHeaderItemRecommStyle}">
                                <Setter Property="Margin" Value="2,0" />
                            </Style>
                            <Style TargetType="PivotItem">
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </Pivot.Resources>
                        <Pivot.Items>
                            <PivotItem Tag="General">
                                <PivotItem.Header>
                                    General
                                </PivotItem.Header>
                                <PivotItem.Content>
                                    <ScrollViewer VerticalScrollBarVisibility="Hidden" VerticalScrollMode="Auto" Height="Auto" VerticalAlignment="Stretch">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width=".5*" />
                                                    <ColumnDefinition Width=".5*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.Resources>
                                                    <Style TargetType="ListViewItem" x:Key="GeneralDetailsListItemStyle">
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                        <Setter Property="Margin" Value="1,1" />
                                                        <Setter Property="BorderBrush"
                                                        Value="{StaticResource SystemControlBackgroundAccentBrush}" />
                                                    </Style>
                                                </Grid.Resources>
                                                <StackPanel>
                                                    <controls:AlternatingListView SelectionMode="None"
                                                                          BorderThickness="0,0,1,0"
                                                                          BorderBrush="{ThemeResource BrushDetailsGeneralBorder}"
                                                                          ItemsSource="{Binding LeftDetailsRow}">
                                                        <ListView.ItemContainerStyle>
                                                            <Style TargetType="ListViewItem"
                                                           BasedOn="{StaticResource GeneralDetailsListItemStyle}">
                                                                <Setter Property="BorderThickness" Value="2,0,0,0" />
                                                            </Style>
                                                        </ListView.ItemContainerStyle>
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="{Binding Item1}"
                                                                       HorizontalAlignment="Left"
                                                                       FontWeight="Normal" />
                                                                    <TextBlock Grid.Column="1" Text="{Binding Item2}"
                                                                       HorizontalAlignment="Right" Margin="3,0"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       TextWrapping="WrapWholeWords" MaxLines="2"
                                                                       FontWeight="SemiLight" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </controls:AlternatingListView>
                                                    <Border Visibility="{Binding MalApiSpecificControlsVisibility}"
                                                    BorderThickness="0,0,1,0"
                                                    BorderBrush="{ThemeResource BrushDetailsGeneralBorder}">
                                                        <ListViewItem RightTapped="StartDate_OnRightTapped" Margin="1,1,1,0"
                                                              Visibility="{Binding MyDetailsVisibility, Converter={StaticResource BoolToVisibilityConverter}}"
                                                              Style="{StaticResource GeneralDetailsListItemStyle}"
                                                              BorderThickness="2,0,0,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="My Start" HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"
                                                                   FontWeight="Normal" />
                                                                <Button Grid.Column="1" Content="{Binding MyStartDate}"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Right" Padding="3,0,4,0"
                                                                Style="{StaticResource TextBlockButtonStyle}"
                                                                FontWeight="SemiLight">
                                                                    <Button.Flyout>
                                                                        <DatePickerFlyout
                                                                    DatePicked="StartDatePickerFlyout_OnDatePicked"
                                                                    Date="{Binding StartDateTimeOffset,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                                                    </Button.Flyout>
                                                                </Button>
                                                            </Grid>
                                                            <FlyoutBase.AttachedFlyout>
                                                                <MenuFlyout x:Name="ResetStartDateFlyout">
                                                                    <MenuFlyoutItem Text="Reset"
                                                                            Command="{Binding ResetStartDateCommand}" />
                                                                </MenuFlyout>
                                                            </FlyoutBase.AttachedFlyout>
                                                        </ListViewItem>
                                                    </Border>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <controls:AlternatingListView SelectionMode="None"
                                                                          BorderThickness="1,0,0,0"
                                                                          BorderBrush="{ThemeResource BrushDetailsGeneralBorder}"
                                                                          ItemsSource="{Binding RightDetailsRow}">
                                                        <ListView.ItemContainerStyle>
                                                            <Style TargetType="ListViewItem"
                                                           BasedOn="{StaticResource GeneralDetailsListItemStyle}">
                                                                <Setter Property="BorderThickness" Value="0,0,2,0" />
                                                            </Style>
                                                        </ListView.ItemContainerStyle>
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="{Binding Item1}"
                                                                       HorizontalAlignment="Left"
                                                                       FontWeight="Normal" VerticalAlignment="Center" />
                                                                    <TextBlock Grid.Column="1" Text="{Binding Item2}"
                                                                       HorizontalAlignment="Right" Margin="3,0"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       TextWrapping="WrapWholeWords" MaxLines="2"
                                                                       TextAlignment="Center"
                                                                       FontWeight="SemiLight" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </controls:AlternatingListView>
                                                    <Border Visibility="{Binding MalApiSpecificControlsVisibility}"
                                                    BorderThickness="1,0,0,0"
                                                    BorderBrush="{ThemeResource BrushDetailsGeneralBorder}">
