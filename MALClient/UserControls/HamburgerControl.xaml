<UserControl
    x:Class="MALClient.UserControls.HamburgerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MALClient.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <ScrollViewer x:Name="PaneScrollViewer" VerticalScrollBarVisibility="Auto">
            <Grid Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                </Grid.ColumnDefinitions>
                <Grid Background="{StaticResource SystemControlBackgroundAccentBrush}" Grid.Column="1"/>
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="HamburgerButton" FontWeight="Bold" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" Width="50" Height="50" Background="Transparent" FontSize="20" Click="HamburgerButton_Click"/>
                    </StackPanel>
                    <Button VerticalContentAlignment="Center" Background="Transparent" Click="BtnList_Click" BorderThickness="0" PointerEntered="Button_PointerEntered" PointerExited="Button_PointerExited">
                        <Grid Width="200" Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border1" BorderThickness="0,0,0,2" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" Grid.ColumnSpan="1" Visibility="Collapsed"/>
                            <SymbolIcon HorizontalAlignment="Center" Symbol="List" Grid.Column="0" VerticalAlignment="Center"  Foreground="{Binding ElementName=TxtList , Path=Foreground}"/>
                            <TextBlock x:Name="TxtList" Text="List" HorizontalAlignment="Stretch" Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button VerticalContentAlignment="Center" Background="Transparent" Click="BtnLogin_Click" BorderThickness="0" PointerEntered="Button_PointerEntered" PointerExited="Button_PointerExited">
                        <Grid Width="200" Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border4" BorderThickness="0,0,0,2" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" Grid.ColumnSpan="1" Visibility="Collapsed"/>
                            <SymbolIcon Symbol="Contact" HorizontalAlignment="Center" Grid.Column="0" VerticalAlignment="Center"  Foreground="{Binding ElementName=TxtLogin , Path=Foreground}"/>
                            <TextBlock x:Name="TxtLogin" Text="Log In" HorizontalAlignment="Stretch" Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Grid>
                    </Button>
                    <!--<Button VerticalContentAlignment="Center" Background="Transparent" Click="BtnSettings_Click" BorderThickness="0" PointerEntered="Button_PointerEntered" PointerExited="Button_PointerExited">
                        <Grid Width="290" Height="50">
